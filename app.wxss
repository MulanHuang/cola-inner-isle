/* 卡片样式 - 优化版 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(139, 115, 85, 0.08),
    0 2rpx 8rpx rgba(139, 115, 85, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2rpx;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(139, 115, 85, 0.1),
    transparent
  );
}

.card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.1),
    0 2rpx 6rpx rgba(139, 115, 85, 0.05);
}

/* 按钮样式 - 优化版 */
.btn-primary {
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  color: #ffffff;
  border-radius: 50rpx;
  padding: 26rpx 52rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(139, 115, 85, 0.25),
    0 4rpx 10rpx rgba(139, 115, 85, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transform: translate(-50%, -50%);
  transition: width 0.4s ease, height 0.4s ease;
}

.btn-primary:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.3),
    0 2rpx 6rpx rgba(139, 115, 85, 0.2);
}

.btn-primary:active::before {
  width: 300%;
  height: 300%;
}

.btn-secondary {
  background: #ffffff;
  color: #8b7355;
  border: 2rpx solid #8b7355;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.08);
}

.btn-secondary:active {
  transform: scale(0.96);
  background: rgba(139, 115, 85, 0.05);
  box-shadow: 0 1rpx 4rpx rgba(139, 115, 85, 0.12);
}

/* 标题样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

/* 文本样式 */
.text-primary {
  color: #8b7355;
}

.text-secondary {
  color: #999999;
  font-size: 24rpx;
}

.text-center {
  text-align: center;
}

/* 图标样式 */
.icon {
  width: 48rpx;
  height: 48rpx;
}

.icon-large {
  width: 80rpx;
  height: 80rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #e5e5e5;
  margin: 30rpx 0;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999999;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 20rpx;
  opacity: 0.3;
}

/* Flex 布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}
