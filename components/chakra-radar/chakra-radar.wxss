/* components/chakra-radar/chakra-radar.wxss */
.chakra-radar-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 雷达图 Canvas */
.radar-canvas {
  width: 350px;
  height: 300px;
  margin-bottom: 20rpx;
  background: #fafafa;
  border-radius: 16rpx;
}

/* 图例 */
.radar-legend {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  padding: 0 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  transition: all 0.3s;
  cursor: pointer;
}

.legend-item.active {
  background: linear-gradient(135deg, #fff9f0 0%, #ffe8e0 100%);
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.2);
  transform: scale(1.05);
}

.legend-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.legend-name {
  font-size: 24rpx;
  color: #333333;
  margin-right: 8rpx;
}

.legend-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #8b7355;
}
