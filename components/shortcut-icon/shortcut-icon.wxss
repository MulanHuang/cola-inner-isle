.shortcut-icon-image {
  width: 44rpx;
  height: 44rpx;
  display: block;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.shortcut-item:active .shortcut-icon-image {
  transform: scale(1.05);
}
