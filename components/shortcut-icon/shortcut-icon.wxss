.shortcut-icon-container {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 16rpx;
  position: relative;
  background: linear-gradient(
    135deg,
    rgba(139, 115, 85, 0.08) 0%,
    rgba(161, 136, 111, 0.12) 100%
  );
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.shortcut-icon-container::before {
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    135deg,
    rgba(139, 115, 85, 0.15) 0%,
    rgba(139, 115, 85, 0.08) 100%
  );
  border-radius: 50%;
  transform: scale(1);
  opacity: 0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.shortcut-item:active .shortcut-icon-container {
  transform: scale(1.08);
}

.shortcut-item:active .shortcut-icon-container::before {
  opacity: 1;
  transform: scale(1.15);
}

