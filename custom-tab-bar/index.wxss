/* Apple iOS 风格底部导航栏 */

.tab-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 110rpx;
  padding-bottom: env(safe-area-inset-bottom);
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-top: 1rpx solid #f0f0f0;
  z-index: 999;
}

/* 单个 tab 项 */
.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding-top: 10rpx;
  box-sizing: border-box;
}

/* 图标容器 */
.icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}

/* 选中状态图标上移 */
.tab-item.active .icon-wrapper {
  transform: translateY(-4rpx);
}

/* 图标 */
.tab-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 文字标签 */
.tab-label {
  font-size: 22rpx;
  line-height: 1;
  margin-top: 6rpx;
  color: #a3a3a3;
  font-weight: 400;
  transition: color 0.2s ease;
}

/* 选中状态文字 */
.tab-item.active .tab-label {
  color: #7a4a27;
  font-weight: 500;
}
