.brand-navbar .navbar-content {
  position: relative;
}

/* iOS 简约风返回按钮 */
.navbar-back {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.back-icon {
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #333;
  border-bottom: 4rpx solid #333;
  transform: rotate(45deg);
  margin-left: 8rpx;
}

.navbar-back:active .back-icon {
  border-color: #999;
}

.navbar-left {
  display: flex;
  align-items: center;
  justify-content: center;
}

.navbar-right {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 80rpx;
}
