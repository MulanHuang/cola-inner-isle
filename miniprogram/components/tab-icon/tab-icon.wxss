.tab-icon {
  width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.icon-svg {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666666;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* é€‰ä¸­çŠ¶æ€ */
.tab-icon.active .icon-svg {
  color: #8b7355;
  animation: iconBounce 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* SVG æ ·å¼ - ä½¿ç”¨ç±»é€‰æ‹©å™¨æ›¿ä»£æ ‡ç­¾é€‰æ‹©å™¨ */
.icon-svg .svg-element {
  width: 100%;
  height: 100%;
  display: block;
}

/* å¼¹è·³åŠ¨ç”» */
@keyframes iconBounce {
  0% {
    transform: scale(1);
  }
  30% {
    transform: scale(1.25);
  }
  50% {
    transform: scale(0.95);
  }
  70% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}
