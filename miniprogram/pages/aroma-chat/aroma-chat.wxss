/* pages/aroma-chat/aroma-chat.wxss */

/* ===================== */
/*        基础样式        */
/* ===================== */

page {
  overflow-x: hidden;
  background: linear-gradient(180deg, #f0f5f0 0%, #e8f0e8 35%, #f0f5f0 100%);
  box-sizing: border-box;
  height: 100%;
}

/* 自定义导航栏（绿色主题） */
.aroma-chat-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 20;
  background: linear-gradient(
    180deg,
    #e8f0e8 0%,
    rgba(232, 240, 232, 0.96) 100%
  );
  box-shadow: 0 2rpx 12rpx rgba(123, 154, 125, 0.12);
  backdrop-filter: blur(14rpx);
}

.aroma-chat-navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.aroma-chat-nav-left,
.aroma-chat-nav-right {
  width: 96rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.aroma-chat-nav-right {
  justify-content: flex-end;
}

.aroma-chat-back-icon {
  font-size: 64rpx;
  color: #5a6b5a;
  font-weight: 300;
  line-height: 1;
  padding-left: 4rpx;
}

.aroma-chat-nav-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

/* ===================== */
/*      整体页面容器      */
/* ===================== */

.chat-page-root {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f0f5f0;
  box-sizing: border-box;
  overflow: hidden;
  background: transparent;
}

/* ===================== */
/*    芳香卡牌展示区域     */
/* ===================== */

.card-hero {
  height: 36vh;
  min-height: 280rpx;
  max-height: 480rpx;
  background: linear-gradient(135deg, #d4e6d4 0%, #c8dcc8 100%);
  border-radius: 22rpx;
  padding: 18rpx;
  margin: 20rpx 24rpx 0;
  box-shadow: 0 10rpx 24rpx rgba(123, 154, 125, 0.12);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex-shrink: 0;
}

.card-preview {
  flex: 1;
  position: relative;
  border-radius: 18rpx;
  overflow: hidden;
  background: #c0d4c0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}

.card-img {
  width: 100%;
  height: 100%;
}

.card-name-tag {
  position: absolute;
  left: 16rpx;
  top: 16rpx;
  background: linear-gradient(135deg, #7b9a7d 0%, #5a7a5c 100%);
  color: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  box-shadow: 0 6rpx 16rpx rgba(90, 122, 92, 0.35);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.card-placeholder {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6b8b6d;
  font-size: 26rpx;
}

.card-theme-note {
  text-align: center;
  font-size: 28rpx;
  color: #4a5a4a;
  padding: 4rpx 12rpx 8rpx;
  line-height: 1.6;
}

/* ===================== */
/*       消息列表        */
/* ===================== */

.chat-scroll {
  flex: 1;
  padding: 24rpx 24rpx 150rpx;
  box-sizing: border-box;
  overflow-y: auto;
  background-color: #f0f5f0;
  transition: padding-bottom 0.25s ease;
}

/* ===================== */
/*   消息行（左右对齐）    */
/* ===================== */

.msg-row {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  width: 100%;
}

.msg-row-other {
  align-items: flex-start;
}

.msg-row-self {
  align-items: flex-end;
}

/* ===================== */
/*      气泡样式         */
/* ===================== */

.msg-bubble {
  display: inline-block;
  padding: 14rpx 20rpx;
  border-radius: 16rpx;
  word-break: break-word;
  word-wrap: break-word;
}

.msg-bubble-other {
  max-width: 78%;
  background: #ffffff;
  border-radius: 20rpx 20rpx 20rpx 8rpx;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.03);
}

.msg-bubble-self {
  max-width: 68%;
  background: linear-gradient(135deg, #7b9a7d 0%, #5a7a5c 100%);
  color: #ffffff;
  border-radius: 20rpx 20rpx 8rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.msg-bubble-loading {
  padding: 14rpx 20rpx;
}

/* ===================== */
/*       文本样式        */
/* ===================== */

.msg-text {
  font-size: 32rpx;
  line-height: 1.7;
  text-align: left;
  word-wrap: break-word;
  white-space: pre-wrap;
}

/* ===================== */
/*      打字指示器       */
/* ===================== */

.typing-indicator {
  display: flex;
  align-items: center;
  padding: 4rpx 0;
}

.dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #7b9a7d;
  margin: 0 6rpx;
  animation: typing 1.4s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%,
  70%,
  100% {
    opacity: 0.25;
    transform: translateY(0);
  }
  30% {
    opacity: 1;
    transform: translateY(-8rpx);
  }
}

.scroll-bottom-anchor {
  height: 44rpx;
  width: 100%;
}

/* ===================== */
/*   底部悬浮输入卡片      */
/* ===================== */

.chat-composer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-top: 12rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 12rpx);
  background: rgba(240, 245, 240, 0.95);
  backdrop-filter: blur(2px);
  -webkit-backdrop-filter: blur(10px);
  box-sizing: border-box;
  z-index: 100;
}

/* 合规提示 */
.ai-disclaimer {
  text-align: center;
  font-size: 20rpx;
  color: #8b9a8b;
  padding: 4rpx 0 0;
  line-height: 1.4;
}

/* ===================== */
/*   底部极简输入栏        */
/* ===================== */

.composer-input-bar {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  padding: 14rpx 24rpx 22rpx;
  min-height: 78rpx;
}

.composer-input-field {
  flex: 1;
  background: rgba(255, 255, 255, 0.96);
  border-radius: 36rpx;
  padding: 18rpx 26rpx;
  display: flex;
  align-items: center;
  min-height: 78rpx;
  max-height: 240rpx;
  box-sizing: border-box;
  overflow: hidden;
  transition: border-radius 0.2s ease;
}

/* 多行展开时调整圆角 */
.composer-input-field.input-expanded {
  border-radius: 26rpx;
  align-items: flex-end;
}

.composer-textarea {
  width: 100%;
  font-size: 30rpx;
  color: #4a5a4a;
  background: transparent;
  line-height: 1.6;
  min-height: 42rpx;
  max-height: 200rpx;
  box-sizing: border-box;
}

.composer-input-placeholder {
  color: #8c9a8c;
  font-size: 30rpx;
}

.composer-send-btn {
  width: 64rpx;
  height: 64rpx;
  background: #7b9a7d;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(123, 154, 125, 0.4);
  transition: all 0.2s ease;
  animation: sendBtnAppear 0.2s ease;
}

@keyframes sendBtnAppear {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.composer-send-btn:active {
  transform: scale(0.92);
  box-shadow: 0 2rpx 8rpx rgba(123, 154, 125, 0.4);
}

.composer-send-icon {
  width: 30rpx;
  height: 30rpx;
}
