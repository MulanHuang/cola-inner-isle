/* pages/chakraHistory/index.wxss */
.chakra-history-container {
  padding-bottom: 40rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #fff9f0 0%, #ffffff 100%);
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 20rpx 30rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1f1a12;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #736550;
  font-style: italic;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 20rpx;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

/* 历史记录列表 */
.history-list {
  padding: 0 20rpx;
}

.history-card {
  margin-bottom: 20rpx;
  padding: 30rpx;
  background: #ffffff;
  transition: all 0.3s;
  /* 左侧彩虹边框 - 呼应脉轮七彩主题 */
  border-left: 6rpx solid transparent;
  background-image: linear-gradient(white, white),
    linear-gradient(
      180deg,
      #e53935,
      #ff6f00,
      #fdd835,
      #43a047,
      #1e88e5,
      #5e35b1,
      #9c27b0
    );
  background-origin: padding-box, border-box;
  background-clip: padding-box, border-box;
  box-shadow: 0 10rpx 28rpx rgba(26, 16, 4, 0.06);
}

.history-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(129, 199, 132, 0.15);
}

/* 卡片头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.test-date {
  display: flex;
  align-items: center;
}

.date-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.date-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.test-time {
  font-size: 24rpx;
  color: #999999;
}

/* 整体状态 */
.overall-status {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  /* 柔和绿蓝渐变 - 与结果页风格协调 */
  background: rgba(122, 198, 164, 0.16);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.status-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2a7a4a;
}

/* 脉轮能量预览 */
.chakra-preview {
  margin-bottom: 16rpx;
}

.preview-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.preview-item:last-child {
  margin-bottom: 0;
}

.preview-emoji {
  font-size: 28rpx;
  width: 48rpx;
  text-align: center;
}

.preview-bar {
  flex: 1;
  height: 12rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 6rpx;
  overflow: hidden;
  margin: 0 12rpx;
}

.preview-bar-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 0.5s ease;
}

.preview-percentage {
  font-size: 24rpx;
  font-weight: 600;
  color: #666666;
  width: 80rpx;
  text-align: right;
}

/* 查看详情提示 */
.view-detail-hint {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  font-size: 24rpx;
  color: #999999;
}

.arrow-icon {
  margin-left: 8rpx;
  font-weight: bold;
}

/* 底部按钮 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 20rpx 0;
}

.bottom-actions button {
  flex: 1;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 28rpx 32rpx;
  border: none;
  transition: all 0.3s;
}

.btn-secondary {
  background: #ffffff;
  color: #6f5840;
  border: 2rpx solid rgba(122, 98, 72, 0.35);
  box-shadow: 0 4rpx 12rpx rgba(26, 16, 4, 0.08);
}

.btn-primary {
  background: linear-gradient(135deg, #9a7b52 0%, #6f5840 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 18rpx rgba(26, 16, 4, 0.18);
  font-weight: 600;
}

button:active {
  transform: scale(0.98);
}
