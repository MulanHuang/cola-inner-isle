/* pages/emotion/emotion.wxss */
.emotion-container {
  padding-bottom: 180rpx;
  background: #f5f1e8; /* 与全局统一 */
}

/* 精简 Hero 区域 */
.hero-card {
  margin: 20rpx;
  padding: 32rpx;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.hero-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: relative;
}

.quote-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #4a3a30;
  font-weight: 500;
}

.quote-author {
  font-size: 24rpx;
  color: #8b7355;
  margin-top: 12rpx;
}

.quote-refresh {
  position: absolute;
  top: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(139, 115, 85, 0.08);
  transition: all 0.3s;
}

.quote-refresh:active {
  background: rgba(139, 115, 85, 0.15);
  transform: rotate(180deg);
}

.refresh-icon {
  font-size: 28rpx;
  color: #8b7355;
}

/* 进度条 */
.progress-bar {
  margin: 0 20rpx 20rpx;
  height: 8rpx;
  background: rgba(139, 115, 85, 0.1);
  border-radius: 4rpx;
  position: relative;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #b8956a, #8b7355);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  position: absolute;
  right: 0;
  top: 16rpx;
  font-size: 22rpx;
  color: #8b7355;
}

/* 区块 - 简化 */
.section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin: 0 20rpx 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

/* 情绪网格 - 简化 */
.emotion-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
}

.emotion-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background: #f9f7f4;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.25s ease;
}

.emotion-item:active {
  transform: scale(0.96);
}

.emotion-item.selected {
  background: linear-gradient(135deg, #f0e6dc, #e8dcd0);
  border-color: #b8956a;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.15);
}

.emotion-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.emotion-name {
  font-size: 24rpx;
  color: #4a3a30;
  text-align: center;
  font-weight: 500;
}

/* 更多情绪按钮 */
.show-more-emotions {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  margin-top: 16rpx;
  padding: 12rpx;
  font-size: 24rpx;
  color: #8b7355;
  border-radius: 12rpx;
  background: rgba(139, 115, 85, 0.06);
}

.show-more-emotions .arrow {
  font-size: 20rpx;
}

/* 情绪反馈 - 简化 */
.emotion-feedback {
  background: #faf8f5;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  margin: 0 20rpx 16rpx;
  animation: fadeIn 0.3s ease;
}

.feedback-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #6b5a4a;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-8rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Tab 切换区域 */
.highlights-section {
  background: #ffffff;
}

.tab-bar {
  display: flex;
  gap: 0;
  margin-bottom: 20rpx;
  background: #f5f1e8;
  border-radius: 12rpx;
  padding: 4rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 26rpx;
  color: #8b7355;
  border-radius: 10rpx;
  transition: all 0.25s ease;
}

.tab.active {
  background: #ffffff;
  color: #4a3a30;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.1);
}

.tab-content {
  animation: fadeIn 0.2s ease;
}

/* 快速模板按钮 - 简化 */
.template-buttons {
  display: flex;
  gap: 10rpx;
  margin-bottom: 16rpx;
  padding-right: 8rpx;
}

.template-scroll {
  width: 100%;
}

.template-btn-small {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 16rpx;
  background: #f9f7f4;
  border-radius: 12rpx;
  border: none;
  transition: all 0.25s;
}

.template-btn-small:active,
.template-btn-hover {
  background: #f0ebe4;
  transform: scale(0.96);
}

.template-icon-small {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.template-label-small {
  font-size: 22rpx;
  color: #6b5a4a;
  white-space: nowrap;
}

/* 文字输入 - 简化 */
.emotion-textarea {
  width: 100%;
  min-height: 160rpx;
  background: #f9f7f4;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.7;
  box-sizing: border-box;
  border: none;
}

.textarea-placeholder {
  color: #b0a090;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: #b0a090;
  margin-top: 8rpx;
}

/* 标签列表 - 简化 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag-item {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 20rpx;
  background: #f9f7f4;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #6b5a4a;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.tag-item-hover {
  transform: scale(0.95);
}

.tag-icon {
  font-size: 24rpx;
  margin-right: 6rpx;
}

.tag-name {
  font-weight: 500;
}

.tag-item.selected {
  background: linear-gradient(135deg, #e8dcd0, #d8ccc0);
  color: #4a3a30;
  border-color: #b8956a;
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.15);
}

.tag-item.selected .tag-icon {
  font-size: 24rpx;
}

/* AI 触发区域 */
.ai-section-collapsed {
  background: transparent;
  padding: 16rpx 20rpx;
  margin: 0 20rpx 16rpx;
}

.ai-trigger {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 20rpx;
  background: #f9f7f4;
  border-radius: 16rpx;
  transition: all 0.25s;
}

.ai-trigger:active {
  background: #f0ebe4;
  transform: scale(0.98);
}

.ai-trigger-icon {
  font-size: 32rpx;
}

.ai-trigger-text {
  font-size: 26rpx;
  color: #8b7355;
  font-weight: 500;
}

.ai-disclaimer {
  text-align: center;
  font-size: 16rpx;
  color: #bbbbbb;
  margin-top: 12rpx;
}

/* AI 回复区域 */
.ai-section {
  margin: 0 20rpx 16rpx;
  background: #faf8f5;
}

.ai-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.ai-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #6b5a4a;
}

.ai-reask {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #8b7355;
  border-radius: 50%;
  background: rgba(139, 115, 85, 0.1);
}

.ai-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #4a3a30;
  white-space: pre-wrap;
}

/* AI 加载动画 */
.ai-loading {
  display: flex;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
}

.loading-dot {
  width: 12rpx;
  height: 12rpx;
  background: #b8956a;
  border-radius: 50%;
  animation: loadingPulse 1s ease-in-out infinite;
}

.loading-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes loadingPulse {
  0%,
  100% {
    opacity: 0.3;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1);
  }
}

.ai-loading-text {
  font-size: 28rpx;
  color: #a17460;
  margin-bottom: 12rpx;
}

.ai-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(255, 154, 139, 0.12);
  gap: 12rpx;
}

.ai-footer-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.ai-footer-text {
  font-size: 26rpx;
  color: #a17460;
  font-weight: 500;
}

.ai-reask-btn {
  border-color: rgba(255, 154, 139, 0.4);
  color: #8a4a36;
  padding: 0 12rpx;
  background: rgba(255, 154, 139, 0.08);
}

.fade-in {
  animation: fadeUp 0.4s ease;
}

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(8rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ai-skeleton {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.skeleton-line {
  height: 18rpx;
  border-radius: 10rpx;
  background: linear-gradient(
    90deg,
    rgba(255, 255, 255, 0.35),
    rgba(255, 255, 255, 0.6),
    rgba(255, 255, 255, 0.35)
  );
  animation: shimmer 1.4s ease-in-out infinite;
}

.line-1 {
  width: 92%;
}

.line-2 {
  width: 88%;
}

.line-3 {
  width: 70%;
}

@keyframes shimmer {
  0% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0.7;
  }
}

/* 能量指数 */
.energy-section {
  background: #fff8ed;
}

.energy-stars {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin: 24rpx 0;
}

.star-item {
  transition: all 0.3s;
}

.star-item:active {
  transform: scale(1.2);
}

.star-icon {
  font-size: 56rpx;
  display: block;
}

.star-item.active .star-icon {
  animation: starPulse 0.5s ease-in-out;
}

@keyframes starPulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.3);
  }
  100% {
    transform: scale(1);
  }
}

.energy-hint {
  text-align: center;
  font-size: 26rpx;
  color: #c46e4f;
  margin-top: 16rpx;
  font-weight: 500;
  min-height: 40rpx;
}

/* 输入区域统一背景 */
.highlights-section,
.free-text-section {
  background: #ffffff;
}

/* 输入列表 - 简化 */
.input-list {
  margin-top: 16rpx;
}

.input-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
  background: #f9f7f4;
  border-radius: 12rpx;
  padding: 14rpx 16rpx;
  border: none;
  transition: all 0.2s ease;
}

.input-item.focused {
  background: #f5f1e8;
}

.item-number {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #e8dcd0;
  color: #6b5a4a;
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
}

/* 内容容器 */
.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* Textarea 样式 */
.item-textarea {
  width: 100%;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  min-height: 44rpx;
  max-height: 200rpx;
}

/* 输入框 placeholder 样式 */
.input-placeholder {
  color: #cccccc;
  font-size: 28rpx;
}

/* 字数统计 */
.char-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999999;
}

.char-hint {
  color: #c46e4f;
}

.char-number {
  color: #999999;
}

/* 字数警告 */
.char-count.warning .char-number {
  color: #ff9a8b;
  font-weight: 600;
}

/* 展开/收起按钮 */
.expand-btn {
  align-self: flex-end;
  margin-top: 8rpx;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  color: #c46e4f;
  background: rgba(255, 154, 139, 0.1);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  transition: all 0.3s;
}

.expand-btn:active {
  transform: scale(0.95);
  background: rgba(255, 154, 139, 0.16);
}

.expand-icon {
  font-size: 20rpx;
  transition: transform 0.3s;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

/* 文本截断（收起状态） */
.item-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  word-break: break-all;
}

.item-text.collapsed {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-text.expanded {
  /* 完整显示 */
}

/* 添加更多按钮 */
.list-toggle {
  margin-top: 8rpx;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  color: #8b7355;
  font-size: 24rpx;
  padding: 8rpx 12rpx;
  border-radius: 10rpx;
  background: #f5f1e8;
}

.list-toggle:active {
  background: #ebe5da;
}

/* 底部操作条 - 简化 */
.action-bar {
  position: sticky;
  bottom: 0;
  z-index: 20;
  display: flex;
  gap: 12rpx;
  padding: 16rpx 20rpx calc(env(safe-area-inset-bottom, 0rpx) + 16rpx);
  margin-top: 24rpx;
  background: linear-gradient(180deg, rgba(245, 241, 232, 0) 0%, #f5f1e8 30%);
}

.action-bar button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 24rpx;
  transition: all 0.2s;
  border: none;
}

.action-bar button:active {
  transform: scale(0.97);
}

.btn-secondary {
  background: #ffffff;
  color: #6b5a4a;
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.1);
}

.btn-save {
  flex: 2;
  background: linear-gradient(135deg, #d4c4b0, #c4b4a0);
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.2);
}

.btn-save.btn-save-disabled {
  opacity: 0.5;
}

/* 合规免责声明 */
.compliance-disclaimer {
  margin: 20rpx;
  padding: 20rpx 24rpx;
  font-size: 22rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
}
