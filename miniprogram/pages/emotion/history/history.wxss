/* pages/emotion/history/history.wxss */
.history-container {
  padding-bottom: 40rpx;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(139, 115, 85, 0.2);
}

.stat-item {
  flex: 1;
  text-align: center;
  color: #ffffff;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

.stat-divider {
  width: 2rpx;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 40rpx;
}

/* 情绪列表 */
.emotion-list {
  padding: 0 20rpx;
}

.emotion-record {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.record-emotion {
  display: flex;
  align-items: center;
}

.emotion-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.emotion-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
}

.record-header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
}

/* 删除按钮 */
.delete-btn {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 107, 107, 0.1);
  transition: all 0.2s ease;
}

.delete-btn:active {
  background: rgba(255, 107, 107, 0.3);
  transform: scale(0.95);
}

.delete-icon {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: 300;
  line-height: 1;
}

/* 能量指数 */
.record-energy {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #fff9e6 0%, #fff3cc 100%);
  border-radius: 12rpx;
}

.energy-label {
  font-size: 24rpx;
  color: #d4a574;
  margin-right: 12rpx;
  font-weight: 500;
}

.energy-stars {
  display: flex;
  gap: 4rpx;
}

.star {
  font-size: 28rpx;
  color: #e0e0e0;
}

.star.active {
  color: #ffd700;
}

/* 感恩/成功模块 */
.record-section {
  margin-top: 16rpx;
  padding: 20rpx;
  border-radius: 12rpx;
}

.gratitude-section {
  background: linear-gradient(135deg, #fff5f7 0%, #ffe8ec 100%);
}

.success-section {
  background: linear-gradient(135deg, #e8f4ff 0%, #d4e9ff 100%);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.section-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #666666;
}

.section-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.section-item {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  line-height: 1.6;
  color: #666666;
}

.item-number {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: rgba(255, 182, 193, 0.3);
  color: #ff8fa3;
  font-size: 20rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.success-section .item-number {
  background: rgba(100, 181, 246, 0.3);
  color: #64b5f6;
}

.item-text {
  flex: 1;
  word-break: break-all;
}

/* 自由输入内容 */
.record-description {
  margin-top: 16rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  border-radius: 12rpx;
}

.description-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.description-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.description-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #666666;
}

.description-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #666666;
  word-break: break-all;
}

/* 标签 */
.record-tags {
  margin-top: 16rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fef9f5 0%, #fdf5ef 100%);
  border-radius: 12rpx;
}

.tags-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.tags-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.tags-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #666666;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.record-tag {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #ffb6c1 0%, #ff8fa3 100%);
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(255, 182, 193, 0.25);
  font-weight: 500;
}

.tag-icon {
  font-size: 26rpx;
  margin-right: 6rpx;
}

.tag-name {
  font-weight: 500;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 30rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #cccccc;
}

/* 加载更多 */
.load-more-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0 20rpx;
}

.load-more-btn {
  width: 280rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 28rpx;
  color: #8b7355;
  background: #ffffff;
  border: 2rpx solid #d4c5b5;
  border-radius: 36rpx;
  transition: all 0.2s ease;
}

.load-more-btn:active {
  background: #f5f1e8;
  transform: scale(0.98);
}

.load-more-btn.loading {
  color: #999999;
  border-color: #e0e0e0;
}

.load-more-btn[disabled] {
  opacity: 0.6;
}

.load-more-hint {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #bbbbbb;
}

/* 已加载全部 */
.all-loaded {
  text-align: center;
  padding: 40rpx 0 20rpx;
}

.all-loaded-text {
  font-size: 24rpx;
  color: #cccccc;
}
