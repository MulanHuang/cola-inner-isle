.innerchild-container {
  padding-bottom: 40rpx;
}

/* Â§¥ÈÉ® */
.header {
  text-align: center;
  padding: 40rpx 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #999999;
}

/* ‰ªãÁªçÂç°Áâá */
.intro-card {
  background: linear-gradient(135deg, #FFE8F0 0%, #FFD6E8 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 0 20rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(255, 182, 193, 0.2);
}

.intro-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.intro-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.intro-text {
  font-size: 26rpx;
  line-height: 1.8;
  color: #666666;
  text-align: left;
}

/* ÁªÉ‰π Âå∫Âüü */
.practice-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.practice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.practice-item {
  display: flex;
  align-items: center;
  background: #F5F1E8;
  border-radius: 16rpx;
  padding: 24rpx;
}

.practice-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  border-radius: 16rpx;
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.practice-content {
  flex: 1;
  min-width: 0;
}

.practice-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 6rpx;
}

.practice-desc {
  font-size: 24rpx;
  color: #999999;
}

.practice-arrow {
  font-size: 32rpx;
  color: #8B7355;
  margin-left: 20rpx;
  flex-shrink: 0;
}

/* ÊèêÁ§∫Âå∫Âüü */
.tips-section {
  background: #FFF9F0;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-number {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #8B7355;
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.6;
  color: #666666;
  padding-top: 8rpx;
}

