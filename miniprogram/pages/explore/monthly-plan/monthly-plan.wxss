  position: relative;
}

.todo-input {
  width: 100%;
  min-height: 44rpx;
  font-size: 30rpx;
  color: #2a2a2a;
  line-height: 44rpx;
  padding: 0;
  border: none;
  background: transparent;
  box-sizing: border-box;
}

.todo-input.completed {
  color: #9c9086;
}

.todo-placeholder {
  color: #b0a499;
}

.todo-delete {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #b3a79a;
  flex-shrink: 0;
}

.todo-delete:active {
  color: #8a7c6f;
}

.todo-add {
  text-align: center;
  padding: 16rpx;
  font-size: 26rpx;
  color: #8a7c6f;
  border: 1rpx dashed #d8c9ba;
  border-radius: 12rpx;
  margin-top: 16rpx;
  background: #fffefa;
}

.todo-add:active {
  background: #fff3d9;
}

.sheet-textarea {
  width: 100%;
  font-size: 28rpx;
  color: #4a3a4a;
  line-height: 46rpx;
  background: transparent;
  padding: 0;
  box-sizing: border-box;
  min-height: 200rpx;
}

.sheet-placeholder {
  color: #c0b0b8;
  font-size: 26rpx;
}

.sheet-footer {
  margin-top: 24rpx;
}

.btn-confirm {
  width: 100%;
  background: linear-gradient(135deg, #3a3a3a, #2a2a2a);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  padding: 24rpx;
  border-radius: 12rpx;
  border: none;
}

/* 任务表单样式 */
.task-sheet {
  max-height: 60vh;
}

.task-form {
  background: transparent;
  padding: 0;
}

.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.form-input {
  width: 100%;
  padding: 22rpx 24rpx;
  font-size: 30rpx;
  color: #2a2a2a;
  background: #fffdfa;
  border: 2rpx solid #cfc3b6;
  border-radius: 14rpx;
  box-sizing: border-box;
  box-shadow: inset 0 1rpx 2rpx rgba(0, 0, 0, 0.04),
    0 6rpx 12rpx rgba(0, 0, 0, 0.04);
}

.picker-value {
  color: #3a3a3a;
}

.form-input:focus {
  border-color: #1f1f1f;
  box-shadow: 0 0 0 2rpx rgba(240, 178, 58, 0.25),
    inset 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
}

.form-input::placeholder {
  color: #b0a499;
}

.task-title-input {
  min-height: 96rpx;
  line-height: 42rpx;
  resize: none;
  border-radius: 18rpx;
  background: linear-gradient(180deg, #fffefa 0%, #fff8ec 100%);
}

.form-placeholder {
  color: #b0a499;
}

.priority-options {
  display: flex;
  gap: 16rpx;
}

.priority-opt {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 26rpx;
  color: #888;
  background: #faf8f5;
  border: 1rpx solid #e8e4dc;
  border-radius: 10rpx;
}

.priority-opt.active {
  background: #3a3a3a;
  color: #fff;
  border-color: #3a3a3a;
}

.task-footer {
  display: flex;
  gap: 16rpx;
}

.btn-delete {
  flex: 1;
  background: #fff;
  color: #e07050;
  font-size: 28rpx;
  font-weight: 500;
  padding: 24rpx;
  border-radius: 12rpx;
  border: 1rpx solid #e8e4dc;
}

.task-footer .btn-confirm {
  flex: 2;
}

/* ========== AI 成长教练模块 ========== */
.ai-coach-section {
  padding: 26rpx 28rpx;
  margin-top: 14rpx;
  background: linear-gradient(135deg, #f9f7f3 0%, #f5f1eb 100%);
  border-left: 6rpx solid #6a8a6a;
  border: 1rpx solid #d8cfc3;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.04);
}

.ai-coach-header {
  margin-bottom: 16rpx;
}

.ai-coach-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4a5a4a;
  line-height: 1.5;
}

.ai-coach-desc {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.ai-coach-desc-line {
  font-size: 24rpx;
  color: #8a9a8a;
  line-height: 1.6;
}

.ai-coach-btn {
  width: 100%;
  padding: 20rpx 0;
  background: linear-gradient(135deg, #6a8a6a 0%, #5a7a5a 100%);
  color: #fff;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 12rpx;
  border: none;
  letter-spacing: 2rpx;
}

.ai-coach-btn:active {
  opacity: 0.85;
}

.ai-coach-btn[disabled] {
  background: linear-gradient(135deg, #a8b8a8 0%, #98a898 100%);
  color: rgba(255, 255, 255, 0.8);
}

.ai-coach-tip {
  margin-top: 10rpx;
  text-align: center;
  font-size: 16rpx;
  color: #9aa69a;
  letter-spacing: 0.5rpx;
}

/* AI 教练输出结果卡片 */
.ai-coach-result {
  margin-top: 20rpx;
  background: #fffdf9;
  border-radius: 14rpx;
  border: 1rpx solid rgba(180, 160, 140, 0.15);
  overflow: hidden;
}

.ai-result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 20rpx;
  background: rgba(106, 138, 106, 0.08);
  border-bottom: 1rpx solid rgba(180, 160, 140, 0.1);
}

.ai-result-label {
  font-size: 26rpx;
  font-weight: 500;
  color: #5a7a5a;
}

.ai-result-toggle {
  font-size: 24rpx;
  color: #8a9a8a;
}

.ai-result-content {
  padding: 20rpx;
  transition: max-height 0.3s ease;
  overflow: hidden;
}

.ai-result-content.collapsed {
  max-height: 200rpx;
}

.ai-result-content.expanded {
  max-height: none;
}

.ai-result-text {
  font-size: 26rpx;
  color: #4a5a4a;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-word;
}
