/* pages/explore/week-plan/detail/detail.wxss */
.detail-container {
  padding: 0 24rpx 60rpx;
  background: linear-gradient(180deg, #ede6de 0%, #e6dcd1 60%, #e0d3c7 100%);
  min-height: 100vh;
}

/* 顶部导航 */
.header-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 0 18rpx;
  margin-top: 120rpx;
  padding-top: calc(env(safe-area-inset-top, 44px) + 6rpx);
  background: #ede6de;
  z-index: 20;
  position: sticky;
  top: 0;
  backdrop-filter: blur(8rpx);
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(139, 115, 133, 0.1);
}

.back-icon {
  width: 26rpx;
  height: 26rpx;
  border-left: 4rpx solid #2e2a29;
  border-bottom: 4rpx solid #2e2a29;
  transform: rotate(45deg);
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #4a3a4a;
}

.header-placeholder {
  width: 60rpx;
}

/* 提示卡片 */
.hint-card {
  text-align: center;
  padding: 16rpx 0;
}

.hint-text {
  font-size: 24rpx;
  color: #8b7385;
  font-style: italic;
}

/* 顶部信息栏 */
.top-info-bar {
  background: linear-gradient(90deg, #5a8a9a, #6a9aaa);
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  text-align: center;
}

.top-info-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 2rpx;
}

/* 纸质手账主体 */
.notebook-wrapper {
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0.94),
    rgba(250, 245, 241, 0.96)
  );
  border-radius: 12rpx;
  box-shadow: 0 10rpx 30rpx rgba(90, 70, 80, 0.16);
  border: 1rpx solid rgba(150, 130, 140, 0.15);
  overflow: hidden;
}

/* 主内容区 - 左右分栏 */
.main-content {
  display: flex;
}

.left-column {
  width: 300rpx;
  border-right: 1rpx solid #c8b8c0;
  flex-shrink: 0;
}

.right-column {
  flex: 1;
}

/* 区块标题 */
.section-header {
  padding: 12rpx 16rpx;
  background: #f5f0ed;
}

.section-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #5a4a5a;
}

.task-header {
  background: #fff;
  border-bottom: 1rpx solid #e8e0d8;
}

/* 日任务组 */
.day-task-group {
  border-bottom: 1rpx solid #e8e0d8;
}

.day-task-group:last-child {
  border-bottom: none;
}

.day-label {
  padding: 8rpx 12rpx;
  display: inline-block;
  margin: 8rpx 0 0 8rpx;
  border-radius: 6rpx;
}

.day-label-text {
  font-size: 20rpx;
  font-weight: 600;
  color: #fff;
}

.day-tasks {
  padding: 4rpx 12rpx 8rpx;
}

.task-row {
  display: flex;
  align-items: flex-start;
  padding: 6rpx 0;
  border-bottom: 1rpx dashed #d8d0d4;
}

.task-row:last-child {
  border-bottom: none;
}

.task-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  margin-top: 8rpx;
  flex-shrink: 0;
}

.task-text {
  flex: 1;
  font-size: 22rpx;
  color: #4a3a4a;
  line-height: 1.5;
}

.no-task {
  padding: 4rpx 0;
}

.no-task-text {
  font-size: 22rpx;
  color: #c0b0b8;
}

/* 右侧栏区块 */
.section-header-right {
  padding: 10rpx 16rpx;
  background: #f0ebe6;
  border-bottom: 1rpx solid #e0d8d0;
}

.section-title-right {
  font-size: 24rpx;
  font-weight: 600;
  color: #5a4a5a;
}

/* 关键事件 */
.key-events-section {
  border-bottom: 1rpx solid #e0d8d0;
}

.key-events-list {
  padding: 8rpx 12rpx;
}

.key-event-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 0;
  border-bottom: 1rpx dashed #e8e0d8;
}

.key-event-item:last-child {
  border-bottom: none;
}

.key-event-text {
  flex: 1;
  font-size: 22rpx;
  color: #4a3a4a;
}

.key-event-boxes {
  display: flex;
  gap: 4rpx;
  flex-shrink: 0;
}

.event-box {
  width: 24rpx;
  height: 24rpx;
  border: 1rpx solid #d0c8c0;
  border-radius: 4rpx;
  background: #fff;
}

/* 复盘和提升区块 */
.review-section,
.improve-section {
  border-bottom: 1rpx solid #e0d8d0;
}

.improve-section {
  border-bottom: none;
}

.text-content {
  padding: 12rpx 16rpx;
  min-height: 80rpx;
}

.content-text {
  font-size: 24rpx;
  color: #4a3a4a;
  line-height: 1.8;
}

.no-content {
  padding: 16rpx 0;
  text-align: center;
}

.no-content-text {
  font-size: 22rpx;
  color: #c0b0b8;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
