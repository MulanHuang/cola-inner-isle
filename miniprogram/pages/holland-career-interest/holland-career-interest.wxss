}

.energy-bar.energy-high .energy-fill {
  background: linear-gradient(90deg, #f2a65a, #e8792e);
}

.energy-bar.energy-mid .energy-fill {
  background: linear-gradient(90deg, #f7bf7f, #f2a65a);
}

.energy-bar.energy-low .energy-fill {
  background: linear-gradient(90deg, #f9d4a4, #f6c792);
  box-shadow: 0 6rpx 14rpx rgba(127, 199, 185, 0.35);
}

.energy-percent {
  position: absolute;
  right: 0;
  top: -28rpx;
  font-size: 24rpx;
  color: #c98756;
}

.result-desc {
  display: block;
  font-size: 26rpx;
