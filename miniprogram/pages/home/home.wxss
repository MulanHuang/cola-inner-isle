/* 7个打卡圆点 */
.habit-dots {
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex: 1;
  margin-left: 16rpx;
}

.habit-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
}

.habit-dot.completed {
  background: #c8a27e;
  border: none;
  box-shadow: 0 1rpx 4rpx rgba(200, 162, 126, 0.3);
}

.habit-dot.incomplete {
  background: transparent;
  border: 1.5rpx solid #ddd0c0;
  box-sizing: border-box;
}

/* 今日列高亮 - 用小圆圈标识 */
.habit-dot.today-col {
  box-shadow: 0 0 0 3rpx rgba(200, 162, 126, 0.2);
}

.habit-dot.completed.today-col {
  box-shadow: 0 0 0 3rpx rgba(200, 162, 126, 0.25),
    0 1rpx 4rpx rgba(200, 162, 126, 0.3);
}

/* 打卡完成动画 */
@keyframes dotComplete {
  0% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.habit-dot.completed {
  animation: dotComplete 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* 底部鼓励文案 */
.habit-encourage-text {
  flex: 1;
  text-align: left;
  font-size: 20rpx;
  color: #bfb0a0;
  letter-spacing: 0.3rpx;
}

/* 当日完成情况弹窗 */
.day-detail-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

/* 半透明遮罩层 */
.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 底部弹出卡片 */
.popup-card {
  position: relative;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx 32rpx 48rpx;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.3s ease;
  max-height: 70vh;
  overflow-y: auto;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 弹窗标题区域 */
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0ebe3;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.popup-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999999;
  background: #f5f5f5;
  border-radius: 50%;
}

/* 弹窗正文区域 */
.popup-content {
  min-height: 200rpx;
}

/* 无记录状态 */
.popup-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999999;
}

/* 有记录状态 - 习惯列表 */
.popup-habits {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.popup-habit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f9f5ef;
  border-radius: 16rpx;
}

.habit-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.habit-emoji {
  font-size: 32rpx;
}

.habit-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.habit-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.habit-status.done {
  background: rgba(200, 162, 126, 0.2);
  color: #8b7355;
}

.habit-status.undone {
  background: #f0f0f0;
  color: #999999;
}

.habit-count {
  font-size: 22rpx;
  color: #8b7355;
}

/* 底部按钮 */
.popup-footer {
  margin-top: 32rpx;
}

.popup-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #c8a27e 0%, #a1886f 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(161, 136, 111, 0.3);
}

.popup-btn::after {
  border: none;
}

.popup-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* ==================== 个人档案引导弹窗 ==================== */
.profile-prompt-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1001;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗卡片 - 居中显示 */
.profile-prompt-card {
  position: relative;
  width: 600rpx;
  background: linear-gradient(180deg, #fffbf5 0%, #ffffff 100%);
  border-radius: 32rpx;
  padding: 48rpx 40rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(139, 115, 85, 0.2),
    0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  animation: popIn 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
  text-align: center;
}

@keyframes popIn {
  from {
    opacity: 0;
    transform: scale(0.85);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 顶部装饰图标 */
.profile-prompt-icon {
  font-size: 72rpx;
  margin-bottom: 20rpx;
  animation: twinkle 2s ease-in-out infinite;
}

@keyframes twinkle {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

/* 标题 */
.profile-prompt-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

/* 描述文字 */
.profile-prompt-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

/* 好处列表 */
.profile-prompt-benefits {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 36rpx;
  padding: 24rpx;
  background: rgba(200, 162, 126, 0.08);
  border-radius: 20rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.benefit-icon {
  font-size: 28rpx;
}

.benefit-text {
  font-size: 26rpx;
  color: #555555;
}

/* 按钮组 */
.profile-prompt-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.profile-prompt-btn {
  width: 100%;
  height: 88rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.profile-prompt-btn::after {
  border: none;
}

.profile-prompt-btn.primary {
  background: linear-gradient(135deg, #c8a27e 0%, #a1886f 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(161, 136, 111, 0.35);
}

.profile-prompt-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(161, 136, 111, 0.3);
}

.profile-prompt-btn.secondary {
  background: transparent;
  color: #999999;
  font-weight: 500;
}

.profile-prompt-btn.secondary:active {
  background: rgba(0, 0, 0, 0.03);
}
