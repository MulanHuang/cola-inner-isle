/* pages/home/home.wxss */
.home-container {
  min-height: 100vh;
  padding: 24rpx;
  padding-top: 32rpx; /* 顶部增加更多间距，让第一个卡片有更清晰的边界 */
  padding-bottom: 180rpx; /* 为底部导航栏留出更多空间，让最后一个卡片完整显示 */
  box-sizing: border-box;
}

.pressable {
  transition: transform 0.2s ease, box-shadow 0.2s ease, filter 0.2s ease;
}

.pressable-active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 6rpx 16rpx rgba(139, 115, 85, 0.12);
  filter: brightness(0.98);
}

/* 今日一句 - 优化版 */
.quote-card {
  background: linear-gradient(135deg, #fffaf3 0%, #f4ede2 100%),
    repeating-linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.15) 0 4rpx,
      rgba(230, 214, 194, 0.12) 4rpx 8rpx
    );
  text-align: center;
  position: relative;
  overflow: hidden;
  border-radius: 24rpx;
  border: 1rpx solid rgba(200, 162, 126, 0.16);
  box-shadow: 0 10rpx 30rpx rgba(139, 115, 85, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.6),
    inset 0 -2rpx 6rpx rgba(161, 136, 111, 0.08);
  margin-top: 40rpx; /* 增加顶部间距，和顶部 logo 区域分隔更明显 */
  margin-bottom: 28rpx; /* 增加底部间距 */
}
.quote-card::before {
  content: "";
  position: absolute;
  inset: 12rpx;
  border-radius: 18rpx;
  background: radial-gradient(
      circle at 30% 20%,
      rgba(255, 255, 255, 0.55),
      transparent 55%
    ),
    radial-gradient(
      circle at 80% 0%,
      rgba(255, 255, 255, 0.35),
      transparent 50%
    );
  opacity: 0.85;
  z-index: 0;
  pointer-events: none;
}
.quote-card::after {
  content: "";
  position: absolute;
  inset: 0;
  background: repeating-linear-gradient(
    0deg,
    rgba(0, 0, 0, 0.015) 0 2rpx,
    transparent 2rpx 6rpx
  );
  mix-blend-mode: multiply;
  opacity: 0.6;
  pointer-events: none;
}

.quote-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333333;
  margin-bottom: 10rpx;
  font-weight: 500;
  position: relative;
  z-index: 1;
  display: block;
}

.quote-author {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
  display: block;
}

/* 塔罗牌 - 优化版 */
.tarot-card {
  background: linear-gradient(135deg, #f3ebdf 0%, #e5d5c1 100%),
    repeating-linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1) 0 4rpx,
      rgba(221, 206, 187, 0.1) 4rpx 8rpx
    );
  padding: 2rpx;
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
  border: 1rpx solid rgba(200, 162, 126, 0.22);
  box-shadow: 0 12rpx 32rpx rgba(139, 115, 85, 0.12),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.55),
    inset 0 -2rpx 6rpx rgba(161, 136, 111, 0.09);
  margin-bottom: 28rpx; /* 与其他卡片保持一致的间距 */
}

.tarot-card::before {
  content: "";
  position: absolute;
  inset: 10rpx;
  border-radius: 20rpx;
  background: radial-gradient(
      circle at 70% 0%,
      rgba(255, 255, 255, 0.4),
      transparent 60%
    ),
    radial-gradient(
      circle at 20% 10%,
      rgba(255, 255, 255, 0.3),
      transparent 55%
    );
  opacity: 0.8;
  pointer-events: none;
}
.tarot-card::after {
  content: "";
  position: absolute;
  inset: 0;
  background: repeating-linear-gradient(
    0deg,
    rgba(0, 0, 0, 0.015) 0 2rpx,
    transparent 2rpx 6rpx
  );
  mix-blend-mode: multiply;
  opacity: 0.6;
  pointer-events: none;
}

.tarot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.tarot-title-chip {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 0;
  background: transparent;
  border: none;
  box-shadow: none;
  margin-left: 16rpx;
  margin-top: 6rpx;
}

.tarot-title-icon {
  font-size: 28rpx;
}

.tarot-title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #35281c;
  letter-spacing: 0.8rpx;
}

.tarot-status {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 0;
  background: transparent;
  border: none;
  box-shadow: none;
  backdrop-filter: none;
  margin-right: 16rpx;
  margin-top: 6rpx;
}

.tarot-status-text {
  font-size: 26rpx;
  color: #6d553c;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.tarot-status-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #d6c7b5;
  box-shadow: 0 0 0 3rpx rgba(200, 162, 126, 0.18);
  transition: all 0.2s ease;
}

.tarot-status-dot.is-done {
  background: #2ecc71;
  box-shadow: 0 0 0 3rpx rgba(46, 204, 113, 0.3),
    0 4rpx 10rpx rgba(46, 204, 113, 0.28);
  animation: tarot-dot-pulse 1.4s ease-in-out infinite;
}

@keyframes tarot-dot-pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 3rpx rgba(46, 204, 113, 0.3),
      0 4rpx 10rpx rgba(46, 204, 113, 0.28);
  }
  50% {
    transform: scale(1.2);
    box-shadow: 0 0 0 6rpx rgba(46, 204, 113, 0.18),
      0 6rpx 14rpx rgba(46, 204, 113, 0.35);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 3rpx rgba(46, 204, 113, 0.3),
      0 4rpx 10rpx rgba(46, 204, 113, 0.28);
  }
}

