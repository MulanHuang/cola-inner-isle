/* pages/mbti-test/mbti-test.wxss */
.test-container {
  min-height: 100vh;
  background: radial-gradient(120% 120% at 20% 20%, #f8f3ea 0%, #f4ece0 35%, #f1e6d8 70%, #f8f3ea 100%);
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}

.debug-banner {
  background: #fff4e5;
  color: #8B7355;
  border: 2rpx dashed #d9b48c;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.bg-blur {
  position: absolute;
  border-radius: 50%;
  filter: blur(120rpx);
  opacity: 0.6;
  z-index: 0;
}

.bg-1 {
  width: 260rpx;
  height: 260rpx;
  background: #f4d8b8;
  top: -40rpx;
  right: -60rpx;
}

.bg-2 {
  width: 240rpx;
  height: 240rpx;
  background: #e5cdb2;
  bottom: -60rpx;
  left: -40rpx;
}

.page-hero {
  position: relative;
  z-index: 1;
  margin-bottom: 28rpx;
}

.hero-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #3c2f20;
  letter-spacing: 1rpx;
}

.hero-subtitle {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #8B7355;
  line-height: 1.5;
}

/* 进度条区域 */
.progress-section {
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.progress-text {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 16rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #E5E5E5;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
  box-shadow: inset 0 1rpx 2rpx rgba(0,0,0,0.04);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #B8956A 0%, #8B7355 50%, #6b5236 100%);
  border-radius: 6rpx;
  transition: width 0.5s cubic-bezier(0.33, 1, 0.68, 1);
  will-change: width;
  box-shadow: 0 0 12rpx rgba(139, 115, 85, 0.35);
}

.progress-percent {
  font-size: 24rpx;
  color: #8B7355;
  text-align: center;
  font-weight: 600;
}

.progress-subtitle {
  margin-top: 6rpx;
  text-align: center;
  font-size: 24rpx;
  color: #a0896c;
  letter-spacing: 0.5rpx;
}

/* 题目卡片 */
.question-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 115, 85, 0.08);
  position: relative;
}

.question-number {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  font-size: 24rpx;
  color: #B8956A;
  font-weight: 600;
  padding: 6rpx 16rpx;
  background: rgba(184, 149, 106, 0.08);
  border-radius: 16rpx;
}

.question-text {
  font-size: 32rpx;
  color: #333333;
  line-height: 1.6;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.dimension-tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: #F5F1E8;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #8B7355;
  border: 2rpx solid #eadac7;
}

/* 选项区域 */
.options-section {
  margin-bottom: 40rpx;
}

.option-button {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.06);
  transition: transform 0.18s ease, box-shadow 0.25s ease;
  position: relative;
  overflow: hidden;
  border: 2rpx solid #f2e7d9;
}

.option-button::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 0;
  height: 100%;
  background: linear-gradient(90deg, rgba(184, 149, 106, 0.1) 0%, rgba(139, 115, 85, 0.05) 100%);
  transition: width 0.3s ease;
}

.option-button::after {
  content: '';
  position: absolute;
  top: 0;
  left: -60%;
  width: 40%;
  height: 100%;
  background: linear-gradient(120deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.25) 50%, rgba(255,255,255,0) 100%);
  opacity: 0;
  transform: skewX(-10deg);
}

.option-button:active {
  transform: scale(0.98);
}

.option-button:active::before {
  width: 100%;
}

.option-hover {
  transform: translateY(-2rpx) scale(0.985);
  box-shadow: 0 8rpx 18rpx rgba(139, 115, 85, 0.14);
}

.option-hover::before {
  width: 100%;
}

.option-hover::after {
  opacity: 1;
  animation: flow-light 0.9s ease-out forwards;
}

@keyframes flow-light {
  0% { transform: translateX(-120%) skewX(-10deg); opacity: 0.9; }
  60% { opacity: 1; }
  100% { transform: translateX(180%) skewX(-10deg); opacity: 0; }
}

.option-key {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #B8956A 0%, #8B7355 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 600;
  margin-right: 24rpx;
  flex-shrink: 0;
  z-index: 1;
}

.option-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.5;
  z-index: 1;
}

/* 导航按钮 */
.nav-buttons {
  margin-bottom: 30rpx;
}

.prev-btn {
  width: 100%;
  background: linear-gradient(135deg, #ffffff 0%, #f7efe2 100%);
  color: #7a6246;
  border: 2rpx solid #e8ddce;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 14rpx rgba(139, 115, 85, 0.12);
}

.prev-btn:disabled {
  opacity: 0.4;
}

.btn-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 18rpx rgba(139, 115, 85, 0.16);
}

/* 提示文字 */
.hint-card {
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 18rpx 20rpx;
  background: #f8f2e8;
  border: 2rpx dashed #e0cdb7;
  border-radius: 18rpx;
  box-shadow: inset 0 1rpx 0 rgba(255,255,255,0.6);
}

.hint-icon {
  font-size: 28rpx;
}

.hint-text {
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
  text-align: left;
}
