/* pages/behavior-strength/behavior-strength-history.wxss */

.container {
  padding: 32rpx 32rpx 48rpx;
  color: #2b2316;
  font-size: 28rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f6efe6 0%, #f9f6ef 45%, #ffffff 100%);
}

.empty {
  text-align: center;
  padding: 120rpx 24rpx;
  color: #8d7a62;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9a8367;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-card {
  padding: 20rpx;
  border-radius: 24rpx;
  background: #fff;
  border: 1rpx solid rgba(255, 190, 120, 0.2);
  box-shadow: 0 12rpx 24rpx rgba(38, 32, 18, 0.08);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.history-header-left {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.history-date {
  font-size: 24rpx;
  color: #8d7a62;
}

.history-tag {
  font-size: 22rpx;
  color: #a0743c;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 176, 98, 0.2);
}

.history-delete {
  color: #c8664d;
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(200, 102, 77, 0.35);
  font-size: 24rpx;
}

.history-top {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 12rpx;
}

.history-chip {
  padding: 8rpx 14rpx;
  border-radius: 999rpx;
  background: #fff4e5;
  color: #7a5b32;
  font-size: 24rpx;
}
