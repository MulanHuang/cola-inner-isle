/* pages/behavior-strength/behavior-strength-report.wxss */

.container {
  padding: 32rpx 32rpx 48rpx;
  color: #222;
  font-size: 30rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f6efe6 0%, #f9f6ef 45%, #ffffff 100%);
}

.history-entry {
  align-self: flex-end;
  margin-bottom: 16rpx;
}

.history-entry-card {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 18rpx 14rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border: 1rpx solid rgba(255, 190, 120, 0.35);
  box-shadow: 0 10rpx 22rpx rgba(38, 32, 18, 0.1);
}

.history-icon {
  position: relative;
  width: 48rpx;
  height: 48rpx;
}

.history-icon-clipboard {
  display: flex;
  align-items: center;
  justify-content: center;
}

.clipboard-tab {
  position: absolute;
  top: 4rpx;
  width: 22rpx;
  height: 12rpx;
  border-radius: 8rpx;
  background: linear-gradient(135deg, #ffb062, #ff7d4d);
  box-shadow: 0 4rpx 10rpx rgba(255, 125, 77, 0.35);
  z-index: 2;
}

.clipboard-body {
  position: absolute;
  top: 10rpx;
  width: 42rpx;
  height: 34rpx;
  border-radius: 10rpx;
  background: #fffaf2;
  border: 2rpx solid rgba(141, 122, 98, 0.6);
  box-shadow: inset 0 2rpx 4rpx rgba(255, 255, 255, 0.7);
}

.clipboard-line {
  position: absolute;
  height: 2rpx;
  border-radius: 999rpx;
  background: rgba(141, 122, 98, 0.5);
}

.clipboard-line-1 {
  top: 24rpx;
  width: 26rpx;
}

.clipboard-line-2 {
  top: 32rpx;
  width: 20rpx;
}

.history-entry-text {
  font-size: 22rpx;
  color: #8d7a62;
  letter-spacing: 2rpx;
}

.title {
  font-size: 40rpx;
  margin-bottom: 32rpx;
}

.radar {
  width: 600rpx;
  height: 600rpx;
  margin: 0 auto 40rpx;
}

.result-item {
  margin-bottom: 20rpx;
  padding: 22rpx;
  border-radius: 20rpx;
  background: #fff;
  border: 1rpx solid rgba(255, 190, 120, 0.2);
  box-shadow: 0 10rpx 24rpx rgba(38, 32, 18, 0.08);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.result-name {
  font-weight: 600;
  color: #2b2316;
}

.result-meta {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.result-score {
  font-size: 30rpx;
  font-weight: 600;
}

.result-level {
  font-size: 22rpx;
  color: #a0743c;
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  background: rgba(255, 176, 98, 0.2);
}

.energy-bar {
  position: relative;
  height: 16rpx;
  border-radius: 999rpx;
  background: #f2e6d8;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.energy-fill {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #ffb062, #ff7d4d);
  box-shadow: 0 6rpx 14rpx rgba(255, 125, 77, 0.35);
}

.energy-bar.energy-high .energy-fill {
  background: linear-gradient(90deg, #ff9f54, #ff6b3d);
}

.energy-bar.energy-mid .energy-fill {
  background: linear-gradient(90deg, #ffc36a, #ff9f54);
}

.energy-bar.energy-low .energy-fill {
  background: linear-gradient(90deg, #9fd3c7, #7fc7b9);
  box-shadow: 0 6rpx 14rpx rgba(127, 199, 185, 0.35);
}

.energy-percent {
  position: absolute;
  right: 0;
  top: -28rpx;
  font-size: 22rpx;
  color: #9a8367;
}

.result-desc {
  display: block;
  font-size: 24rpx;
  color: #7d6a52;
  line-height: 1.4;
}

.detail-list {
  margin-top: 14rpx;
  padding: 14rpx;
  border-radius: 16rpx;
  background: #fff8ee;
  border: 1rpx dashed rgba(255, 190, 120, 0.35);
}

.detail-item {
  display: flex;
  gap: 12rpx;
  margin-bottom: 10rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  min-width: 120rpx;
  font-size: 22rpx;
  color: #a0743c;
}

.detail-text {
  flex: 1;
  font-size: 24rpx;
  color: #6b5236;
  line-height: 1.5;
}

.top-title {
  margin-top: 32rpx;
  font-weight: bold;
}

.top-item {
  margin-top: 8rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  background: #fff4e5;
}

.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 36rpx;
  gap: 16rpx;
}

.btn {
  flex: 1;
  padding: 18rpx 24rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  background: #2b2316;
  color: #fff;
  line-height: 1;
  box-shadow: 0 12rpx 24rpx rgba(38, 32, 18, 0.16);
}
