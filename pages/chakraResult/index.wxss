}

.overall-loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: float 2s ease-in-out infinite;
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.overall-loading-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2e7d32;
  margin-bottom: 20rpx;
}

.overall-loading-dots {
  display: flex;
  justify-content: center;
  gap: 12rpx;
}

.overall-loading-dots .dot {
  width: 16rpx;
  height: 16rpx;
  background: #4caf50;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.overall-loading-dots .dot:nth-child(1) {
  animation-delay: -0.32s;
}
.overall-loading-dots .dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%,
  80%,
  100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

