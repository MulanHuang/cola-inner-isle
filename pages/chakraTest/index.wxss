/* pages/chakraTest/index.wxss */
.chakra-test-container {
  background: linear-gradient(180deg, #f8f3ea 0%, #fdfbf7 45%, #f8f3ea 100%);
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  position: relative;
  text-align: center;
  padding: 46rpx 24rpx 36rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1f1a12;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #736550;
}

.header-action {
  position: absolute;
  top: 40rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 14rpx 18rpx;
  background: rgba(154, 123, 82, 0.08);
  border: 2rpx solid rgba(154, 123, 82, 0.15);
  box-shadow: 0 8rpx 20rpx rgba(26, 16, 4, 0.08);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.header-action:active {
  transform: scale(0.95);
  background: rgba(154, 123, 82, 0.16);
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 20rpx;
  color: #7a6248;
  font-weight: 500;
}

/* 进度条 */
.progress-section {
  padding: 0 40rpx 34rpx;
}

.progress-bar {
  height: 8rpx;
  background: rgba(122, 98, 72, 0.14);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  /* 彩虹渐变 - 呼应七脉轮颜色 */
  background: linear-gradient(
    90deg,
    #e53935 0%,
    /* 海底轮-红 */ #ff6f00 16%,
    /* 腹轮-橙 */ #fdd835 32%,
    /* 太阳轮-黄 */ #43a047 48%,
    /* 心轮-绿 */ #1e88e5 64%,
    /* 喉轮-蓝 */ #5e35b1 80%,
    /* 眉心轮-靛 */ #9c27b0 100% /* 顶轮-紫 */
  );
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-text {
  text-align: center;
  font-size: 24rpx;
  color: #5e4a32;
  font-weight: 500;
}

/* 题目卡片 */
.question-card {
  margin: 0 20rpx 30rpx;
  padding: 40rpx 30rpx;
  background: #ffffff;
  border: 2rpx solid #efe7db;
  box-shadow: 0 10rpx 28rpx rgba(26, 16, 4, 0.06);
}

.question-number {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #9a7b52 0%, #6f5840 100%);
  color: #ffffff;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-bottom: 24rpx;
}

.question-text {
  font-size: 32rpx;
  line-height: 1.8;
  color: #2b2216;
  margin-bottom: 40rpx;
  font-weight: 500;
}

/* 选项 */
.options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 24rpx 28rpx;
  background: #fffdf9;
  border: 2rpx solid rgba(122, 98, 72, 0.16);
  border-radius: 16rpx;
  transition: all 0.3s;
}

.option-item-hover {
  transform: translateY(-2rpx) scale(0.995);
  box-shadow: 0 10rpx 22rpx rgba(26, 16, 4, 0.12);
  border-color: rgba(122, 98, 72, 0.36);
}

.option-item.selected {
  /* 柔和绿紫渐变 - 与结果页风格呼应 */
  background: linear-gradient(135deg, #eef7f2 0%, #f4eefc 100%);
  border-color: #7ac6a4;
  box-shadow: 0 6rpx 18rpx rgba(122, 198, 164, 0.26);
}

.option-radio {
  width: 40rpx;
  height: 40rpx;
  border: 3rpx solid rgba(122, 98, 72, 0.35);
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: all 0.3s;
}

.option-item.selected .option-radio {
  border-color: #66bb6a;
}

.option-radio-inner {
  width: 20rpx;
  height: 20rpx;
  background: linear-gradient(135deg, #9a7b52 0%, #6f5840 100%);
  border-radius: 50%;
}

.option-label {
  font-size: 28rpx;
  color: #2b2216;
  flex: 1;
}

.option-item.selected .option-label {
  color: #2a7a4a;
  font-weight: 500;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.button-group button {
  flex: 1;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 28rpx 32rpx;
  border: none;
  transition: all 0.3s;
}

.btn-secondary {
  background: #ffffff;
  color: #6f5840;
  border: 2rpx solid rgba(122, 98, 72, 0.35);
  box-shadow: 0 4rpx 12rpx rgba(26, 16, 4, 0.08);
}

.btn-primary,
.btn-submit {
  background: linear-gradient(135deg, #9a7b52 0%, #6f5840 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 18rpx rgba(26, 16, 4, 0.18);
  font-weight: 600;
}

.btn-primary.disabled,
.btn-submit.disabled {
  opacity: 0.5;
}

.btn-primary.active,
.btn-submit.active {
  opacity: 1;
}

.btn-submit {
  background: linear-gradient(135deg, #8d7bff 0%, #6a74ff 100%);
  box-shadow: 0 10rpx 20rpx rgba(104, 118, 255, 0.28);
}

button:active {
  transform: scale(0.98);
}

/* 提示文字 */
.hint-text {
  text-align: center;
  font-size: 24rpx;
  color: #6b5a43;
  padding: 0 40rpx;
  line-height: 1.6;
}
