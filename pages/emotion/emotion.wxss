/* pages/emotion/emotion.wxss */
.emotion-container {
  padding-bottom: 200rpx;
  background: #fdf8f3;
}

/* 顶部 Hero */
.hero-card {
  position: relative;
  margin: 24rpx 20rpx;
  padding: 48rpx 40rpx;
  border-radius: 28rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #fff1e6 0%, #ffe3d4 100%);
  box-shadow: 0 10rpx 40rpx rgba(255, 154, 139, 0.2);
}

.hero-bg {
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.55), transparent 45%),
    radial-gradient(circle at 80% 10%, rgba(255, 255, 255, 0.4), transparent 40%),
    radial-gradient(circle at 60% 80%, rgba(255, 255, 255, 0.35), transparent 45%);
  filter: blur(12rpx);
  pointer-events: none;
}

.hero-content {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero-tag {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 22rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #b85c3c;
  background: rgba(255, 255, 255, 0.68);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
}

.hero-title {
  font-size: 56rpx;
  font-weight: 700;
  color: #3a2a23;
  letter-spacing: 2rpx;
}

.hero-subtitle {
  font-size: 28rpx;
  color: #a17460;
  line-height: 1.7;
}

.hero-quote {
  background: rgba(255, 255, 255, 0.72);
  border-radius: 22rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 139, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.quote-icon {
  font-size: 56rpx;
  margin-bottom: 20rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.quote-text {
  font-size: 32rpx;
  line-height: 1.9;
  color: #4a3125;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.quote-author {
  font-size: 26rpx;
  color: #a17460;
  margin-bottom: 20rpx;
}

.quote-refresh {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 28rpx;
  background: rgba(255, 154, 139, 0.12);
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #d16a52;
  transition: all 0.3s;
}

.quote-refresh:active {
  background: rgba(255, 154, 139, 0.2);
  transform: scale(0.95);
}

.refresh-icon {
  margin-right: 8rpx;
}

.refresh-text {
  font-weight: 500;
}

.status-row {
  display: flex;
  gap: 12rpx;
  padding: 0 20rpx 4rpx;
  flex-wrap: wrap;
}

.status-pill {
  flex: 1;
  display: inline-flex;
  align-items: center;
  gap: 14rpx;
  padding: 22rpx 24rpx;
  min-height: 120rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid rgba(255, 154, 139, 0.16);
  color: #7a5340;
  font-size: 26rpx;
  box-shadow: 0 6rpx 18rpx rgba(255, 154, 139, 0.08);
}

.status-pill.pill-empty {
  border-style: dashed;
  color: #c3a99a;
  background: rgba(255, 255, 255, 0.7);
}

.emotion-pill {
  background: linear-gradient(135deg, rgba(255, 235, 227, 0.9), rgba(255, 222, 210, 0.9));
}

.energy-pill {
  background: linear-gradient(135deg, rgba(255, 244, 225, 0.9), rgba(255, 237, 205, 0.9));
}

.badge-pill {
  justify-content: center;
  color: #8a4a36;
  border-color: rgba(255, 154, 139, 0.24);
  background: rgba(255, 154, 139, 0.12);
}

.pill-icon {
  font-size: 28rpx;
}

.pill-icon-wrap {
  width: 44rpx;
  height: 44rpx;
  border-radius: 12rpx;
  background: rgba(255, 154, 139, 0.16);
  display: flex;
  align-items: center;
  justify-content: center;
}

.pill-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.pill-main {
  font-size: 30rpx;
  font-weight: 700;
  color: #4a3125;
}

.pill-sub {
  font-size: 24rpx;
  color: #a17460;
}

.block-label {
  padding: 14rpx 24rpx 0;
  font-size: 26rpx;
  color: #b85c3c;
  letter-spacing: 1rpx;
}

/* 区块 */
.section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 44rpx 36rpx;
  margin: 0 20rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(93, 61, 29, 0.05);
  transition: all 0.3s;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 38rpx;
  margin-right: 12rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #a17460;
  margin-bottom: 24rpx;
  line-height: 1.7;
}

/* 情绪网格 */
.emotion-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 18rpx;
}

.emotion-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 22rpx;
  border: 3rpx solid rgba(255, 154, 139, 0.06);
  transition: all 0.3s;
}

.emotion-item:active {
  transform: scale(0.95);
}

.emotion-item.selected {
  background: linear-gradient(135deg, #ffe8db 0%, #ffd9c7 100%);
  border-color: #ffb697;
  box-shadow: 0 10rpx 24rpx rgba(255, 154, 139, 0.24);
  transform: scale(1.02);
  position: relative;
}

.emotion-icon {
  font-size: 56rpx;
  margin-bottom: 10rpx;
}

.emotion-name {
  font-size: 26rpx;
  color: #4a3125;
  text-align: center;
  font-weight: 500;
}

.emotion-check {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
  background: #ff9a8b;
  color: #ffffff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 139, 0.3);
}

.emotion-highlight {
  position: absolute;
  bottom: 10rpx;
  left: 12rpx;
  right: 12rpx;
  height: 8rpx;
  border-radius: 8rpx;
  background: linear-gradient(90deg, rgba(255, 154, 139, 0.2), rgba(255, 154, 139, 0.7), rgba(255, 154, 139, 0.2));
}

/* 情绪反馈 */
.emotion-feedback {
  background: linear-gradient(135deg, #fffbf0 0%, #fff5e6 100%);
  border-radius: 20rpx;
  padding: 28rpx 32rpx;
  margin: 0 20rpx 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 6rpx 18rpx rgba(255, 193, 7, 0.08);
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.feedback-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.feedback-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.6;
  color: #7a5340;
  font-weight: 500;
}

/* 感恩日记引导 */
.gratitude-section {
  background: #fffaf4;
}

/* 快速模板按钮 */
.template-buttons {
  display: flex;
  gap: 12rpx;
  margin-bottom: 24rpx;
  padding-right: 12rpx;
}

.template-scroll {
  width: 100%;
  padding-bottom: 6rpx;
}

.template-btn {
  flex: 1;
  min-width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  background: linear-gradient(135deg, #fff5f7 0%, #ffe8ec 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 182, 193, 0.2);
  transition: all 0.3s;
  box-shadow: 0 2rpx 8rpx rgba(255, 182, 193, 0.08);
}

.template-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(255, 182, 193, 0.15);
}

.template-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.template-label {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  text-align: center;
}

/* 文字输入 */
.emotion-textarea {
  width: 100%;
  min-height: 280rpx;
  background: #fffdf9;
  border-radius: 16rpx;
  padding: 28rpx;
  font-size: 30rpx;
  line-height: 1.9;
  box-sizing: border-box;
  border: 2rpx solid rgba(139, 115, 85, 0.12);
  transition: all 0.3s;
}

.emotion-textarea:focus {
  border-color: rgba(255, 182, 193, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(255, 182, 193, 0.1);
}

.textarea-placeholder {
  color: #bbbbbb;
  line-height: 1.9;
}

.char-count {
  text-align: right;
  font-size: 26rpx;
  color: #bbbbbb;
  margin-top: 12rpx;
}

.char-count.floating {
  position: absolute;
  right: 0;
  bottom: -6rpx;
  background: rgba(255, 255, 255, 0.9);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  margin-top: 0;
}

/* 标签列表 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 22rpx 28rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #7a5340;
  border: 2rpx solid rgba(139, 115, 85, 0.12);
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
  /* 确保点击区域足够大 */
  min-width: 120rpx;
  min-height: 64rpx;
  /* 防止文字选中 */
  user-select: none;
  -webkit-user-select: none;
  /* 确保可点击 */
  cursor: pointer;
  position: relative;
  z-index: 1;
}

/* Hover 反馈（点击时） */
.tag-item-hover {
  transform: scale(0.92);
  background: linear-gradient(135deg, #f5ede3 0%, #f0e5d9 100%) !important;
  box-shadow: 0 1rpx 4rpx rgba(139, 115, 85, 0.15) !important;
}

.tag-item:active {
  transform: scale(0.92);
}

.tag-icon {
  font-size: 34rpx;
  margin-right: 8rpx;
  display: inline-block;
  /* 防止 emoji 被选中 */
  user-select: none;
  -webkit-user-select: none;
}

.tag-name {
  font-weight: 500;
  /* 防止文字被选中 */
  user-select: none;
  -webkit-user-select: none;
}

/* 选中状态 */
.tag-item.selected {
  background: linear-gradient(135deg, #ffe3d4 0%, #ffc7ac 100%);
  color: #ffffff;
  border-color: #ffb697;
  box-shadow: 0 8rpx 18rpx rgba(255, 154, 139, 0.3);
  transform: scale(1.05);
  font-weight: 600;
}

/* 选中状态的 hover 效果 */
.tag-item.selected.tag-item-hover {
  transform: scale(0.98) !important;
  box-shadow: 0 2rpx 8rpx rgba(255, 182, 193, 0.25) !important;
}

.tag-item.selected .tag-icon {
  font-size: 34rpx;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16rpx;
  padding: 0 20rpx;
  margin-top: 32rpx;
}

.button-group button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  padding: 32rpx 38rpx;
  transition: all 0.3s;
}

/* 温柔回应区域 */
.gentle-response-section {
  padding: 0 20rpx;
  margin-top: 32rpx;
  text-align: center;
}

.response-hint {
  font-size: 28rpx;
  color: #c46e4f;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
  font-weight: 500;
}

.btn-gentle-response {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #ffd7c8 0%, #ffb8a1 100%);
  color: #8a4a36;
  border-radius: 50rpx;
  font-size: 30rpx;
  padding: 32rpx 38rpx;
  border: none;
  box-shadow: 0 6rpx 16rpx rgba(255, 154, 139, 0.25);
  transition: all 0.3s;
  font-weight: 600;
}

.btn-gentle-response:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 139, 0.2);
}

.btn-gentle-response[disabled] {
  opacity: 0.5;
  transform: none;
}

/* AI   */
.ai-section {
  margin: 32rpx 20rpx 0;
  background: linear-gradient(135deg, #fff4ec 0%, #fff0e3 100%);
  border: 2rpx solid rgba(255, 154, 139, 0.12);
}

.ai-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 154, 139, 0.12);
}

.ai-avatar {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.ai-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #8a4a36;
}

.ai-content {
  font-size: 30rpx;
  line-height: 1.9;
  color: #4a3125;
  white-space: pre-wrap;
  margin-bottom: 20rpx;
}

.ai-loading-text {
  font-size: 28rpx;
  color: #a17460;
  margin-bottom: 12rpx;
}

.ai-footer {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(255, 154, 139, 0.12);
  gap: 12rpx;
}

.ai-footer-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.ai-footer-text {
  font-size: 26rpx;
  color: #a17460;
  font-weight: 500;
}

.ai-reask-btn {
  border-color: rgba(255, 154, 139, 0.4);
  color: #8a4a36;
  padding: 0 12rpx;
  background: rgba(255, 154, 139, 0.08);
}

.fade-in {
  animation: fadeUp 0.4s ease;
}

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(8rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.ai-skeleton {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.skeleton-line {
  height: 18rpx;
  border-radius: 10rpx;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.35), rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.35));
  animation: shimmer 1.4s ease-in-out infinite;
}

.line-1 {
  width: 92%;
}

.line-2 {
  width: 88%;
}

.line-3 {
  width: 70%;
}

@keyframes shimmer {
  0% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0.7;
  }
}

/* 能量指数 */
.energy-section {
  background: #fff8ed;
}

.energy-stars {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin: 24rpx 0;
}

.star-item {
  transition: all 0.3s;
}

.star-item:active {
  transform: scale(1.2);
}

.star-icon {
  font-size: 56rpx;
  display: block;
}

.star-item.active .star-icon {
  animation: starPulse 0.5s ease-in-out;
}

@keyframes starPulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.3);
  }
  100% {
    transform: scale(1);
  }
}

.energy-hint {
  text-align: center;
  font-size: 26rpx;
  color: #c46e4f;
  margin-top: 16rpx;
  font-weight: 500;
  min-height: 40rpx;
}

/* 感恩小事区域 */
.gratitude-section {
  background: #fffaf4;
}

/* 小成就区域 */
.success-section {
  background: #f5fbff;
}

/* 快速模板按钮（小尺寸） */
.template-btn-small {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.75);
  border-radius: 14rpx;
  border: 2rpx solid rgba(255, 182, 193, 0.12);
  transition: all 0.3s;
  margin-right: 12rpx;
}

/* 模板按钮激活状态（有输入框聚焦时） */
.template-btn-small.active {
  border-color: rgba(255, 154, 139, 0.35);
  background: rgba(255, 154, 139, 0.14);
}

/* 模板按钮点击反馈 */
.template-btn-hover {
  transform: scale(0.95);
  background: rgba(255, 154, 139, 0.15) !important;
  box-shadow: inset 0 4rpx 0 rgba(255, 154, 139, 0.3);
}

.template-btn-small:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.9);
}

.template-icon-small {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.template-label-small {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  white-space: nowrap;
}

/* 输入列表 */
.input-list {
  margin-top: 24rpx;
}

.input-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  background: rgba(255, 255, 255, 0.7);
  border-radius: 16rpx;
  padding: 16rpx 20rpx 28rpx;
  border: 2rpx solid rgba(255, 182, 193, 0.1);
  transition: all 0.3s ease;
  position: relative;
}

/* 输入框聚焦状态 */
.input-item.focused {
  border-color: #ff9a8b;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 139, 0.25);
  background: rgba(255, 255, 255, 0.95);
}

.input-item:focus-within {
  border-color: rgba(255, 182, 193, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(255, 182, 193, 0.1);
}

.item-number {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ffb8a1 0%, #ff9a8b 100%);
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  margin-top: 4rpx;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

/* 编号圆圈聚焦状态 */
.item-number.focused {
  transform: scale(1.1);
  box-shadow: 0 4rpx 12rpx rgba(255, 182, 193, 0.4);
}

/* 内容容器 */
.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* Textarea 样式 */
.item-textarea {
  width: 100%;
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
  min-height: 44rpx;
  max-height: 200rpx;
}

/* 输入框 placeholder 样式 */
.input-placeholder {
  color: #cccccc;
  font-size: 28rpx;
}

/* 字数统计 */
.char-count {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999999;
}

.char-hint {
  color: #c46e4f;
}

.char-number {
  color: #999999;
}

/* 字数警告 */
.char-count.warning .char-number {
  color: #ff9a8b;
  font-weight: 600;
}

/* 展开/收起按钮 */
.expand-btn {
  align-self: flex-end;
  margin-top: 8rpx;
  padding: 4rpx 12rpx;
  font-size: 22rpx;
  color: #c46e4f;
  background: rgba(255, 154, 139, 0.1);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  transition: all 0.3s;
}

.expand-btn:active {
  transform: scale(0.95);
  background: rgba(255, 154, 139, 0.16);
}

.expand-icon {
  font-size: 20rpx;
  transition: transform 0.3s;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

/* 文本截断（收起状态） */
.item-text {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
  word-break: break-all;
}

.item-text.collapsed {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-text.expanded {
  /* 完整显示 */
}

/* 自由输入区 */
.free-text-section {
  background: #fffaf6;
}

.list-toggle {
  margin-top: 8rpx;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  color: #c46e4f;
  font-size: 24rpx;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(255, 154, 139, 0.08);
  width: fit-content;
}

.toggle-icon {
  font-size: 24rpx;
}

/* 底部操作条 */
.action-bar {
  position: sticky;
  bottom: 0;
  z-index: 20;
  display: flex;
  gap: 16rpx;
  padding: 12rpx 20rpx calc(env(safe-area-inset-bottom, 0rpx) + 12rpx);
  margin-top: 32rpx;
  background: linear-gradient(180deg, rgba(253, 248, 243, 0) 0%, rgba(253, 248, 243, 0.9) 70%, rgba(253, 248, 243, 0.98) 100%);
}

.action-bar button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 28rpx 32rpx;
  transition: all 0.3s;
}

.action-bar button:active {
  transform: scale(0.96);
}

.btn-icon {
  font-size: 34rpx;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #a17460;
  border: 2rpx dashed rgba(139, 115, 85, 0.35);
  box-shadow: inset 0 0 0 2rpx rgba(255, 255, 255, 0.6);
}

.btn-save {
  background: linear-gradient(135deg, #ffb8a1 0%, #ff9a8b 100%);
  box-shadow: 0 8rpx 18rpx rgba(255, 154, 139, 0.3);
  font-weight: 600;
  font-size: 32rpx;
}

.btn-save:active {
  box-shadow: 0 6rpx 14rpx rgba(255, 154, 139, 0.26);
}

.btn-save.btn-save-disabled {
  position: relative;
  overflow: hidden;
}

.btn-save.btn-save-disabled::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.7), rgba(255, 255, 255, 0.5));
}
