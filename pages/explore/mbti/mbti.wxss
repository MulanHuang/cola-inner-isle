/* pages/explore/mbti/mbti.wxss */
.mbti-container {
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #999999;
}

/* 当前MBTI */
.current-mbti {
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 0 20rpx 20rpx;
  text-align: center;
  color: #ffffff;
  box-shadow: 0 8rpx 16rpx rgba(139, 115, 85, 0.2);
}

.mbti-type {
  font-size: 64rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.mbti-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.mbti-desc {
  font-size: 26rpx;
  line-height: 1.6;
  opacity: 0.9;
}

/* MBTI选择器 */
.mbti-selector {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.selector-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
}

.mbti-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.mbti-item {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f1e8;
  border-radius: 12rpx;
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.mbti-item.selected {
  background: linear-gradient(135deg, #fff9f0 0%, #f5f1e8 100%);
  border-color: #8b7355;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.15);
}

.mbti-type-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 4rpx;
}

.mbti-name-text {
  font-size: 20rpx;
  color: #666666;
  text-align: center;
}

.save-btn {
  width: 100%;
}

/* 历史记录入口 */
.history-section {
  margin: 0 20rpx 20rpx;
}

.history-card {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.history-icon {
  font-size: 44rpx;
  margin-right: 20rpx;
}

.history-content {
  flex: 1;
}

.history-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 6rpx;
}

.history-desc {
  font-size: 24rpx;
  color: #888888;
}

.history-arrow {
  font-size: 40rpx;
  color: #cccccc;
  font-weight: 300;
}

/* 测试区域 */
.test-section {
  margin: 0 20rpx 20rpx;
}

.test-card {
  background: linear-gradient(135deg, #fff9f0 0%, #f5f1e8 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  border: 2rpx solid #e5dcc8;
}

.test-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.test-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.test-desc {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.test-btn {
  width: 100%;
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 30rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(139, 115, 85, 0.2);
}

/* 提示区域 */
.hint-section {
  background: #fff9f0;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx;
}

.hint-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 12rpx;
}

.hint-text {
  font-size: 24rpx;
  line-height: 1.6;
  color: #666666;
}
