/* pages/explore/monthly-plan/history/history.wxss */
.history-container {
  padding: 0 24rpx 40rpx;
  background: linear-gradient(180deg, #ede6de 0%, #e6dcd1 60%, #e0d3c7 100%);
  min-height: 100vh;
}

/* 顶部导航 */
.header-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 0 18rpx;
  margin-top: 120rpx;
  position: sticky;
  top: 0;
  margin-top: 120rpx;
  padding-top: calc(env(safe-area-inset-top, 44px) + 6rpx);
  background: #ede6de;
  z-index: 20;
  backdrop-filter: blur(8rpx);
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(139, 115, 85, 0.08);
}

.back-icon {
  width: 26rpx;
  height: 26rpx;
  border-left: 4rpx solid #2e2a29;
  border-bottom: 4rpx solid #2e2a29;
  transform: rotate(45deg);
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.header-placeholder {
  width: 80rpx;
}

/* 引导文案 */
.guide-text {
  text-align: center;
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.guide-text text {
  font-size: 30rpx;
  color: #6f5b5a;
  line-height: 1.6;
}

/* 年份导航 */
.year-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 28rpx;
}

.nav-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(139, 115, 85, 0.08);
  font-size: 36rpx;
  color: #8b7355;
}

.nav-btn:active {
  background: rgba(139, 115, 85, 0.15);
}

.year-display {
  font-size: 32rpx;
  font-weight: 600;
  color: #4a3a4a;
  min-width: 150rpx;
  text-align: center;
}

/* 月份列表 */
.month-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.month-card {
  background: linear-gradient(180deg, #ffffff, #fbf7f3);
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(90, 70, 80, 0.08);
  border: 1rpx solid rgba(140, 120, 120, 0.08);
  transition: all 0.2s ease;
}

.month-card:active {
  transform: scale(0.98);
  background: #f5f1e8;
}

.month-card.has-record {
  border-color: rgba(200, 162, 126, 0.3);
}

.month-card.is-current {
  border-color: rgba(138, 112, 96, 0.4);
}

.month-card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.month-num {
  font-size: 28rpx;
  font-weight: 600;
  color: #4a3a4a;
}

.record-indicator {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.record-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #c8a27e, #b88c6a);
}

.record-count {
  font-size: 20rpx;
  color: #a09090;
}

.current-tag {
  font-size: 18rpx;
  color: #8a7060;
  background: rgba(138, 112, 96, 0.12);
  padding: 4rpx 10rpx;
  border-radius: 8rpx;
}

.month-card-preview {
  min-height: 60rpx;
}

.preview-text {
  font-size: 22rpx;
  color: #6a5a5a;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.month-card-empty {
  min-height: 60rpx;
  display: flex;
  align-items: center;
}

.empty-text {
  font-size: 22rpx;
  color: #c0b0b0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 30rpx;
  color: #6f5b5a;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #a09090;
}
