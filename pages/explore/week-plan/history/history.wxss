/* pages/explore/week-plan/history/history.wxss */
.history-container {
  padding: 0 24rpx 40rpx;
  background: linear-gradient(180deg, #ede6de 0%, #e6dcd1 60%, #e0d3c7 100%);
  min-height: 100vh;
}

/* 顶部导航 */
.header-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 22rpx 0 18rpx;
  position: sticky;
  top: 0;
  margin-top: 120rpx;
  padding-top: calc(env(safe-area-inset-top, 44px) + 6rpx);
  background: #ede6de;
  z-index: 20;
  backdrop-filter: blur(8rpx);
}

.back-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(139, 115, 85, 0.08);
}

.back-icon {
  width: 26rpx;
  height: 26rpx;
  border-left: 4rpx solid #2e2a29;
  border-bottom: 4rpx solid #2e2a29;
  transform: rotate(45deg);
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.header-placeholder {
  width: 60rpx;
}

/* 引导文案 */
.guide-text {
  text-align: center;
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.guide-text text {
  font-size: 30rpx;
  color: #6f5b5a;
  line-height: 1.6;
}

/* 年份导航 */
.year-nav {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 28rpx;
}

.nav-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(139, 115, 85, 0.08);
  font-size: 36rpx;
  color: #8b7355;
}

.nav-btn:active {
  background: rgba(139, 115, 85, 0.15);
}

.year-display {
  font-size: 32rpx;
  font-weight: 600;
  color: #4a3a4a;
  min-width: 160rpx;
  text-align: center;
}

/* 周列表 */
.week-list {
  background: linear-gradient(180deg, #ffffff, #fbf7f3);
  border-radius: 24rpx;
  padding: 16rpx;
  box-shadow: 0 8rpx 22rpx rgba(90, 70, 80, 0.12);
  border: 1rpx solid rgba(140, 120, 120, 0.1);
}

.week-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 16rpx;
  border-bottom: 1rpx solid #f0ebe4;
}

.week-item:last-child {
  border-bottom: none;
}

.week-item:active {
  background: #f5f2ed;
}

.week-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.week-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4a3a4a;
}

.week-range {
  font-size: 24rpx;
  color: #8a7a8a;
}

.week-arrow {
  font-size: 28rpx;
  color: #b0a0a8;
}

/* 空状态 */
.empty-hint {
  padding: 60rpx 0;
  text-align: center;
}

.empty-text {
  font-size: 26rpx;
  color: #999;
}

