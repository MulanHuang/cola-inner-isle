/* pages/explore/zodiac-detail/zodiac-detail.wxss */
.zodiac-detail-container {
  padding: 20rpx 20rpx 60rpx;
  background: linear-gradient(180deg, #eef1ff 0%, #f6f7fb 45%, #f6f7fb 100%);
  min-height: 100vh;
}

.hero-card {
  background: linear-gradient(160deg, #5c6beb 0%, #5563db 100%);
  border-radius: 24rpx;
  padding: 44rpx 28rpx;
  text-align: center;
  color: #ffffff;
  box-shadow: 0 10rpx 22rpx rgba(92, 107, 235, 0.22);
  margin-bottom: 24rpx;
}

.hero-icon {
  font-size: 84rpx;
  margin-bottom: 14rpx;
  text-shadow: 0 6rpx 16rpx rgba(58, 66, 160, 0.35);
}

.hero-name {
  font-size: 42rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.hero-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 10rpx;
}

.hero-date {
  font-size: 26rpx;
  opacity: 0.9;
}

.fact-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 26rpx 24rpx;
  color: #3f3f3f;
  margin-bottom: 24rpx;
  border: 1rpx solid #e9ecf5;
  box-shadow: 0 6rpx 16rpx rgba(35, 39, 77, 0.06);
}

.fact-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 18rpx 26rpx;
}

.fact-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.fact-label {
  font-size: 24rpx;
  color: #7c86e6;
  opacity: 1;
}

.fact-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #3f3f3f;
}

.trait-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(35, 39, 77, 0.06);
  margin-bottom: 24rpx;
  border: 1rpx solid #e9ecf5;
}

.trait-row {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.trait-row:last-child {
  margin-bottom: 0;
}

.trait-tag {
  min-width: 84rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
  color: #ffffff;
}

.trait-tag--good {
  background: #7c86e6;
}

.trait-tag--strong {
  background: #8f9bff;
}

.trait-tag--weak {
  background: #a5b1ff;
}

.trait-text {
  font-size: 28rpx;
  color: #4c4c4c;
  line-height: 1.6;
  flex: 1;
}

.section-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(35, 39, 77, 0.06);
  margin-bottom: 24rpx;
  border: 1rpx solid #e9ecf5;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #3a3a3a;
  margin-bottom: 20rpx;
}

.section-title--accent {
  position: relative;
  padding-left: 18rpx;
}

.section-title--accent::before {
  content: "";
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 6rpx;
  height: 26rpx;
  border-radius: 999rpx;
  background: #5c6beb;
}

.analysis-block {
  margin-bottom: 18rpx;
}

.analysis-block:last-child {
  margin-bottom: 0;
}

.analysis-title {
  font-size: 28rpx;
  color: #5c6beb;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.analysis-text {
  font-size: 28rpx;
  color: #5a5a5a;
  line-height: 1.7;
}

.analysis-example-block {
  margin-top: 14rpx;
  display: block;
}

.analysis-example-label {
  color: #5c6beb;
  font-weight: 600;
  font-size: 26rpx;
  margin-bottom: 6rpx;
}

.analysis-example-text {
  color: #5f6368;
  font-size: 26rpx;
  line-height: 1.7;
}


.fortune-quote {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  color: #6b7280;
  text-align: center;
  margin-bottom: 20rpx;
}

.quote-mark {
  font-size: 46rpx;
  color: #bdbdbd;
  font-weight: 600;
}

.quote-text {
  font-size: 30rpx;
  color: #4b5563;
  font-weight: 600;
}

.fortune-calendar {
  margin-bottom: 24rpx;
}

.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 18rpx;
  padding-bottom: 14rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.calendar-date {
  display: flex;
  align-items: baseline;
  gap: 6rpx;
}

.calendar-date-day {
  font-size: 46rpx;
  font-weight: 600;
  color: #4a4a4a;
}

.calendar-date-month {
  font-size: 26rpx;
  color: #9d9d9d;
}

.calendar-tabs {
  display: flex;
  gap: 22rpx;
}

.calendar-tab {
  font-size: 26rpx;
  color: #9a9a9a;
  position: relative;
  padding-bottom: 8rpx;
}

.calendar-tab.active {
  color: #5c6beb;
  font-weight: 600;
}

.calendar-tab.active::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 26rpx;
  height: 6rpx;
  border-radius: 999rpx;
  background: #5c6beb;
}

.calendar-week {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
}

.calendar-weekday {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.calendar-weekday-label {
  font-size: 24rpx;
  color: #b6b6b6;
}

.calendar-weekday-label.is-today {
  color: #4f4f4f;
  font-weight: 600;
}

.calendar-weekday-date {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #b8b8b8;
  background: #f2f2f2;
}

.calendar-weekday-date.is-today {
  background: #5c6beb;
  color: #ffffff;
  font-weight: 600;
}

.calendar-weekday-date.is-selected {
  border: 2rpx solid #5c6beb;
  color: #5c6beb;
  background: #ffffff;
  font-weight: 600;
}

.calendar-weekday-date.is-selected.is-today {
  border: none;
  background: #5c6beb;
  color: #ffffff;
}

.calendar-weekday-today {
  font-size: 24rpx;
}

.fortune-summary {
  background: #f2f4ff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #e3e7ff;
}

.fortune-summary-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

.fortune-summary-left {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 10rpx;
  min-width: 220rpx;
}

.fortune-score-value {
  font-size: 76rpx;
  font-weight: 700;
  color: #5c6beb;
  line-height: 1;
}

.fortune-stars {
  display: flex;
  gap: 6rpx;
}

.star {
  font-size: 30rpx;
  color: #d8defb;
}

.star.on {
  color: #f3c26d;
}

.fortune-score-label {
  font-size: 26rpx;
  color: #5c6beb;
  background: #e9ecff;
  padding: 6rpx 14rpx;
  border-radius: 999rpx;
}

.fortune-summary-right {
  flex: 1;
  display: grid;
  gap: 14rpx;
}

.fortune-bar {
  display: grid;
  grid-template-columns: 72rpx 1fr;
  align-items: center;
  gap: 12rpx;
}

.fortune-bar-label {
  font-size: 26rpx;
  color: #5c6beb;
  text-align: left;
}

.fortune-bar-track {
  height: 14rpx;
  background: #e9ecff;
  border-radius: 999rpx;
  overflow: hidden;
}

.fortune-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #7d88f4, #5c6beb);
  border-radius: 999rpx;
}

.fortune-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.fortune-card {
  background: #f4f6ff;
  border-radius: 18rpx;
  padding: 16rpx;
  text-align: center;
  border: 1rpx solid #e6e9ff;
}

.fortune-card-label {
  font-size: 24rpx;
  color: #8b92a5;
  margin-bottom: 8rpx;
}

.fortune-card-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #5c6beb;
}

.fortune-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.fortune-action {
  border-radius: 18rpx;
  padding: 18rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.fortune-action--good {
  background: #eef6ff;
}

.fortune-action--bad {
  background: #fff4f4;
}

.fortune-action-label {
  width: 40rpx;
  height: 40rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

.fortune-action--good .fortune-action-label {
  background: #5c6beb;
}

.fortune-action--bad .fortune-action-label {
  background: #f07272;
}

.fortune-action-text {
  font-size: 26rpx;
  color: #4f4f4f;
}

.fortune-detail-list {
  display: grid;
  gap: 20rpx;
}

.fortune-detail {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  border: 1rpx solid #e9ecf5;
  box-shadow: 0 6rpx 16rpx rgba(35, 39, 77, 0.05);
}

.fortune-detail-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.fortune-detail-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 18rpx;
  background: #f2f4ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #5c6beb;
}

.fortune-detail-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #3f3f3f;
  flex: 1;
}

.fortune-detail-stars {
  display: flex;
}

.fortune-detail-text {
  font-size: 27rpx;
  color: #626262;
  line-height: 1.7;
}

.fortune-detail-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.fortune-tag {
  font-size: 22rpx;
  color: #5c6beb;
  background: #eef1ff;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

.fortune-detail-advice {
  display: grid;
  gap: 10rpx;
  margin-top: 12rpx;
}

.advice-item {
  font-size: 26rpx;
  color: #6a6a6a;
  line-height: 1.6;
  background: #f7f8fc;
  padding: 10rpx 12rpx;
  border-radius: 12rpx;
}

.advice-action {
  border-left: 6rpx solid #5c6beb;
}

.advice-risk {
  border-left: 6rpx solid #f07272;
}

.advice-boost {
  border-left: 6rpx solid #f3c26d;
}
