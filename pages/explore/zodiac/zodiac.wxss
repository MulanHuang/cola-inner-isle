/* pages/explore/zodiac/zodiac.wxss */
.zodiac-container {
  padding-bottom: 40rpx;
}

/* 档案完善提示条 */
.profile-tip-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 20rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(90deg, #fff8e6 0%, #fff3d6 100%);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 193, 7, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, 0.15);
}

.profile-tip-content {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 12rpx;
}

.profile-tip-icon {
  font-size: 28rpx;
}

.profile-tip-text {
  font-size: 26rpx;
  color: #7a6a00;
  flex: 1;
}

.profile-tip-arrow {
  font-size: 26rpx;
  color: #c8a27e;
  font-weight: 500;
}

.profile-tip-close {
  font-size: 28rpx;
  color: #999999;
  padding: 8rpx;
  margin-left: 12rpx;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #999999;
}

/* 当前星座 */
.current-zodiac {
  background: linear-gradient(135deg, #e8dfd0 0%, #d4c4b0 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 0 20rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(139, 115, 85, 0.2);
}

.zodiac-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.zodiac-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.zodiac-date {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.zodiac-desc {
  font-size: 26rpx;
  line-height: 1.6;
  color: #666666;
}

/* 生日输入 */
.birthday-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.birthday-picker {
  background: #f5f1e8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 20rpx;
}

.placeholder {
  color: #999999;
}

.save-btn {
  width: 100%;
}

/* 星座列表 */
.zodiac-list {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.zodiac-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.zodiac-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f5f1e8;
  border-radius: 12rpx;
}

.zodiac-item-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.zodiac-item-name {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 4rpx;
}

.zodiac-item-date {
  font-size: 20rpx;
  color: #999999;
  text-align: center;
}
