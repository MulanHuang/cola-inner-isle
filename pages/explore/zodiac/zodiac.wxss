/* pages/explore/zodiac/zodiac.wxss */
.zodiac-container {
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #999999;
}

/* 当前星座 */
.current-zodiac {
  background: linear-gradient(135deg, #E8DFD0 0%, #D4C4B0 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 0 20rpx 20rpx;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(139, 115, 85, 0.2);
}

.zodiac-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.zodiac-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.zodiac-date {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.zodiac-desc {
  font-size: 26rpx;
  line-height: 1.6;
  color: #666666;
}

/* 生日输入 */
.birthday-section {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 20rpx;
}

.birthday-picker {
  background: #F5F1E8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333333;
  text-align: center;
  margin-bottom: 20rpx;
}

.placeholder {
  color: #999999;
}

.save-btn {
  width: 100%;
}

/* 星座列表 */
.zodiac-list {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.zodiac-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.zodiac-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #F5F1E8;
  border-radius: 12rpx;
}

.zodiac-item-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.zodiac-item-name {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 4rpx;
}

.zodiac-item-date {
  font-size: 20rpx;
  color: #999999;
  text-align: center;
}

