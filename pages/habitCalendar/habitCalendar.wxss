ut/* pages/habitCalendar/habitCalendar.wxss */
.page-container {
  min-height: 100vh;
  background: #f9f5ef;
  padding: 24rpx;
  padding-bottom: 60rpx;
  box-sizing: border-box;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: linear-gradient(
    180deg,
    #f9f5ef 0%,
    rgba(249, 245, 239, 0.98) 100%
  );
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 44px;
  padding: 0 16rpx;
}

.navbar-back {
  width: 60rpx;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 24rpx;
  height: 24rpx;
}

.navbar-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
}

.navbar-placeholder {
  width: 60rpx;
}

/* ========== Tab Pills ========== */
.tab-pills {
  display: flex;
  background: #efebe4;
  border-radius: 999rpx;
  padding: 6rpx;
  margin-bottom: 24rpx;
}

.tab-pill {
  flex: 1;
  text-align: center;
  padding: 18rpx 0;
  font-size: 26rpx;
  color: #999999;
  border-radius: 999rpx;
  transition: all 0.3s ease;
}

.tab-pill.active {
  background: #ffffff;
  color: #8b7355;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.15);
}

/* ========== 通用卡片样式 ========== */
.view-content {
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 日视图 ========== */
.day-view {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 日期卡片 */
.day-date-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #fff9f0 0%, #f5f1e8 100%);
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.day-date-left {
  display: flex;
  flex-direction: column;
}

.day-date-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.day-date-hint {
  font-size: 24rpx;
  color: #999999;
}

.day-status-tag {
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.day-status-tag.not_started {
  background: #f0ebe4;
  color: #999999;
}

.day-status-tag.in_progress {
  background: #fff3e0;
  color: #e6a23c;
}

.day-status-tag.completed {
  background: #e8f5e9;
  color: #67c23a;
}

.day-status-tag.future {
  background: #f0f0f0;
  color: #cccccc;
}

/* 今日练习清单卡片 */
.day-checklist-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0ebe4;
}

.day-habits-list {
  display: flex;
  flex-direction: column;
}

.day-habit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f2ed;
  transition: background 0.2s ease;
}

.day-habit-item:last-child {
  border-bottom: none;
}

.day-habit-item:active {
  background: #faf8f5;
}

.habit-item-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.habit-emoji {
  font-size: 36rpx;
}

.habit-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.habit-item-right {
  display: flex;
  align-items: center;
}

.habit-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-dot-filled {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #c8a27e;
  box-shadow: 0 0 8rpx rgba(200, 162, 126, 0.4);
}

.status-dot-empty {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  border: 2rpx solid #d4d4d4;
  box-sizing: border-box;
}

.status-text {
  font-size: 24rpx;
  color: #c8a27e;
}

.status-text.go {
  color: #999999;
}

.habit-status.na .status-text {
  color: #cccccc;
}

/* 底部今日一句 */
.day-summary-card {
  background: linear-gradient(135deg, #fbf8f4 0%, #f5f1e8 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.06);
}

.day-summary-card .summary-text {
  font-size: 26rpx;
  color: #8b7355;
  line-height: 1.6;
}

/* ========== 周视图 ========== */
.week-view {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 周标题卡片 */
.week-header-card {
  background: linear-gradient(135deg, #fff9f0 0%, #f5f1e8 100%);
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.week-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.week-subtitle {
  font-size: 24rpx;
  color: #999999;
}

/* 周矩阵卡片 */
.week-matrix-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.week-table-header {
  display: flex;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0ebe4;
  margin-bottom: 8rpx;
}

.week-label-cell {
  width: 120rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.week-days-row {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 4rpx;
}

.week-day-label {
  text-align: center;
  font-size: 22rpx;
  color: #999999;
  font-weight: 500;
}

.week-count-cell {
  width: 70rpx;
  text-align: right;
  font-size: 20rpx;
  color: #999999;
}

/* 热度条行 */
.week-heat-row {
  display: flex;
  align-items: flex-end;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.heat-bar-wrapper {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  height: 100%;
}

.heat-bar {
  width: 16rpx;
  background: linear-gradient(180deg, #c8a27e 0%, #d4b896 100%);
  border-radius: 8rpx 8rpx 0 0;
  min-height: 4rpx;
}

/* 习惯行 */
.week-habit-row {
  display: flex;
  align-items: center;
  padding: 14rpx 0;
  border-bottom: 1rpx solid #f5f2ed;
}

.week-habit-row:last-child {
  border-bottom: none;
}

.week-habit-emoji {
  font-size: 24rpx;
}

.week-habit-name {
  font-size: 22rpx;
  color: #666666;
  font-weight: 500;
}

.week-dot-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

.week-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.week-dot.done {
  background: #c8a27e;
  box-shadow: 0 0 6rpx rgba(200, 162, 126, 0.4);
}

.week-dot.undone {
  border: 2rpx solid #d4d4d4;
  box-sizing: border-box;
}

.week-dot.na {
  width: 8rpx;
  height: 8rpx;
  background: #e0e0e0;
}

.week-count {
  font-size: 20rpx;
  color: #8b7355;
  font-weight: 500;
}

/* 周统计卡片 */
.week-stats-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.stats-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stat-block {
  flex: 1;
  background: #fbf8f4;
  border-radius: 16rpx;
  padding: 20rpx;
}

.stat-block .stat-label {
  font-size: 22rpx;
  color: #999999;
  display: block;
  margin-bottom: 12rpx;
}

.stat-block .stat-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #8b7355;
}

/* 进度条 */
.progress-bar-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.progress-bar-bg {
  flex: 1;
  height: 12rpx;
  background: #e8e4dd;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #c8a27e 0%, #8b7355 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #8b7355;
  min-width: 60rpx;
}

/* 最佳日横幅 */
.best-day-banner {
  background: linear-gradient(135deg, #fff9f0 0%, #f5f1e8 100%);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  text-align: center;
}

.best-day-text {
  font-size: 24rpx;
  color: #8b7355;
}

/* ========== 月视图 ========== */
.month-view {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 月标题卡片 */
.month-header-card {
  background: linear-gradient(135deg, #fff9f0 0%, #f5f1e8 100%);
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.month-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  display: block;
  margin-bottom: 8rpx;
}

.month-subtitle {
  font-size: 24rpx;
  color: #999999;
}

/* 日历卡片 */
.month-calendar-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.month-weekdays-row {
  display: flex;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #f0ebe4;
}

.month-weekday {
  flex: 1;
  text-align: center;
  font-size: 22rpx;
  color: #999999;
  font-weight: 500;
}

.month-days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 4rpx;
}

.month-day-cell {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 0;
  min-height: 80rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.month-day-cell:active {
  background: #f5f2ed;
}

.month-day-cell.selected {
  background: #f5f1e8;
  box-shadow: inset 0 0 0 2rpx #c8a27e;
}

.month-day-cell .day-num {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 6rpx;
}

.month-day-cell.undone .day-num {
  color: #cccccc;
}

/* 热度点 */
.heat-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.heat-dot.heat-1 {
  background: #e8ddd0;
}

.heat-dot.heat-2 {
  background: #d4b896;
}

.heat-dot.heat-3 {
  background: #c8a27e;
  box-shadow: 0 0 8rpx rgba(200, 162, 126, 0.5);
}

/* 选中日期摘要 */
.month-day-summary {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.summary-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.month-day-summary .summary-text {
  flex: 1;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.5;
}

.summary-action {
  display: flex;
  align-items: center;
  gap: 4rpx;
  color: #8b7355;
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  background: #f5f1e8;
  border-radius: 999rpx;
}

.summary-action .arrow {
  font-size: 20rpx;
}

/* 月统计卡片 */
.month-stats-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08);
}

.month-stats-row {
  display: flex;
  margin-bottom: 20rpx;
}

.month-stat-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
}

.month-stat-item .stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #8b7355;
  margin-bottom: 8rpx;
}

.month-stat-item .stat-label {
  font-size: 22rpx;
  color: #999999;
}

/* 月度总结横幅 */
.month-summary-banner {
  background: linear-gradient(135deg, #fbf8f4 0%, #f5f1e8 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  text-align: center;
}

.summary-banner-text {
  font-size: 24rpx;
  color: #8b7355;
  line-height: 1.6;
}

/* ========== 底部安全区域 ========== */
.safe-area-bottom {
  height: env(safe-area-inset-bottom);
  padding-bottom: 20rpx;
}
