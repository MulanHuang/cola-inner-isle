/* pages/home/home.wxss */
.home-container {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 150rpx; /* 为底部导航栏留出空间 */
  box-sizing: border-box;
}

/* 今日一句 - 优化版 */
.quote-card {
  background: linear-gradient(135deg, #fff9f0 0%, #f5f1e8 100%);
  text-align: center;
  position: relative;
  overflow: hidden;
}
.quote-card::before {
  content: "";
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle,
    rgba(255, 249, 240, 0.8) 0%,
    transparent 70%
  );
  opacity: 0.5;
}

.quote-icon {
  font-size: 30rpx;
  margin-bottom: 0rpx;
  position: relative;
  z-index: 1;
}

.quote-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333333;
  margin-bottom: 10rpx;
  font-weight: 500;
  position: relative;
  z-index: 1;
  display: block;
}

.quote-author {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
  display: block;
}

.quote-refresh {
  display: inline-flex;
  align-items: center;
  padding: 14rpx 28rpx;
  background: rgba(139, 115, 85, 0.12);
  border-radius: 40rpx;
  font-size: 24rpx;
  color: #8b7355;
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
}

.quote-refresh:active {
  transform: scale(0.95);
  background: rgba(139, 115, 85, 0.18);
}

.refresh-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

/* 塔罗牌 - 优化版 */
.tarot-card {
  background: linear-gradient(135deg, #f0e6d7 0%, #deccb5 100%);
  padding: 2rpx;
  border-radius: 24rpx;
  position: relative;
  overflow: hidden;
}

.tarot-card::before {
  content: "";
  position: absolute;
  top: -30%;
  right: -30%;
  width: 160%;
  height: 160%;
  background: radial-gradient(
    circle,
    rgba(255, 255, 255, 0.3) 0%,
    transparent 60%
  );
  opacity: 0.6;
}

.tarot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
}

.tarot-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  letter-spacing: 0.5rpx;
}

.tarot-status {
  font-size: 22rpx;
  color: #8b7355;
  background: rgba(255, 255, 255, 0.6);
  padding: 10rpx 20rpx;
  border-radius: 999rpx;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
}

.tarot-content {
  text-align: center;
  position: relative;
  z-index: 1;
}

.tarot-undrawn {
  padding: 48rpx 0;
}

.tarot-card-back {
  width: 200rpx;
  height: 320rpx;
  margin: 0 auto 24rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15), 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  transition: transform 0.3s ease;
}

.tarot-hint {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.tarot-drawn {
  padding: 24rpx 0 16rpx;
}

.tarot-card-front {
  width: 220rpx;
  height: 352rpx;
  margin: 0 auto 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.18),
    0 6rpx 16rpx rgba(0, 0, 0, 0.12);
}

.tarot-name {
  font-size: 40rpx;
  color: #2f2418;
  font-weight: 600;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.tarot-actions {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #8b7355;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.tarot-redo-btn {
  background: linear-gradient(135deg, #c7b299 0%, #a1886f 100%);
  color: #fff;
  border: none;
  padding: 14rpx 36rpx;
  border-radius: 999rpx;
  box-shadow: 0 8rpx 20rpx rgba(161, 136, 111, 0.35);
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tarot-redo-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(161, 136, 111, 0.4);
}

/* 快捷入口 - 优化版：更精致、更专业 */
.shortcuts {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
  margin: 20rpx 0;
}

.shortcut-item {
  flex: 1;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.08),
    0 2rpx 8rpx rgba(139, 115, 85, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.shortcut-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3rpx;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(139, 115, 85, 0.3),
    transparent
  );
  opacity: 0;
  transition: opacity 0.3s ease;
}

.shortcut-item::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(139, 115, 85, 0.05);
  transform: translate(-50%, -50%);
  transition: width 0.4s ease, height 0.4s ease;
}

.shortcut-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(139, 115, 85, 0.12),
    0 1rpx 4rpx rgba(139, 115, 85, 0.06);
}

.shortcut-item:active::before {
  opacity: 1;
}

.shortcut-item:active::after {
  width: 200%;
  height: 200%;
}

/* 图标容器样式已移至 shortcut-icon 组件 */

.shortcut-name {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  margin-top: 4rpx;
}

/* 自我探索 - 优化版 */
.explore-card {
  background: linear-gradient(135deg, #f0e8ff 0%, #e0d5f5 100%);
  position: relative;
  overflow: hidden;
  cursor: pointer;
}

.explore-card::before {
  content: "";
  position: absolute;
  bottom: -40%;
  left: -20%;
  width: 140%;
  height: 140%;
  background: radial-gradient(
    circle,
    rgba(255, 255, 255, 0.4) 0%,
    transparent 65%
  );
  opacity: 0.5;
}

.explore-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 4rpx;
  position: relative;
  z-index: 1;
}

.explore-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  letter-spacing: 0.5rpx;
}

.explore-arrow {
  font-size: 32rpx;
  color: #8b7355;
  transition: transform 0.3s ease;
}

.explore-card:active .explore-arrow {
  transform: translateX(4rpx);
}

.explore-items {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  position: relative;
  z-index: 1;
}

.explore-tag {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.7);
  padding: 14rpx 28rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  transition: all 0.3s ease;
}

.explore-tag-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 探索工具·每日练习 - Mini打卡日历模块 (精简版) */
.habit-card {
  background: #f9f5ef;
  border-radius: 20rpx;
  padding: 20rpx 24rpx 16rpx;
  margin: 16rpx 0;
  box-shadow: 0 3rpx 12rpx rgba(139, 115, 85, 0.06),
    0 1rpx 4rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.habit-card:active {
  transform: scale(0.985);
  box-shadow: 0 2rpx 6rpx rgba(139, 115, 85, 0.08);
}

/* 顶部标题行 */
.habit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.habit-title-section {
  display: flex;
  flex-direction: column;
}

.habit-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  letter-spacing: 0.5rpx;
}

.habit-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  background: rgba(200, 162, 126, 0.08);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.habit-card:active .habit-arrow {
  transform: translateX(3rpx);
  background: rgba(200, 162, 126, 0.12);
}

.habit-arrow-icon {
  width: 18rpx;
  height: 18rpx;
  opacity: 0.6;
}

/* 打卡点阵区域 */
.habit-grid {
  display: flex;
  flex-direction: column;
  gap: 0;
  position: relative;
}

/* 星期表头行 */
.habit-week-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.habit-row-left-placeholder {
  width: 100rpx;
}

.habit-week-labels {
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex: 1;
  margin-left: 16rpx;
}

.week-label {
  flex: 1;
  text-align: center;
  font-size: 20rpx;
  font-weight: 500;
  color: #c5b5a5;
  letter-spacing: 0;
}

.week-label.today {
  color: #8b7355;
  font-weight: 600;
}

/* 习惯行 */
.habit-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  position: relative;
  z-index: 1;
}

.habit-row-left {
  display: flex;
  align-items: center;
  width: 100rpx;
}

.habit-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  opacity: 0.8;
}

.habit-name {
  font-size: 24rpx;
  color: #666666;
  font-weight: 500;
  line-height: 28rpx;
}

/* 分隔线 */
.habit-divider {
  height: 1rpx;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(180, 160, 140, 0.12) 15%,
    rgba(180, 160, 140, 0.12) 85%,
    transparent 100%
  );
  margin: 0;
}

/* 7个打卡圆点 */
.habit-dots {
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex: 1;
  margin-left: 16rpx;
}

.habit-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
}

.habit-dot.completed {
  background: #c8a27e;
  border: none;
  box-shadow: 0 1rpx 4rpx rgba(200, 162, 126, 0.3);
}

.habit-dot.incomplete {
  background: transparent;
  border: 1.5rpx solid #ddd0c0;
  box-sizing: border-box;
}

/* 今日列高亮 - 用小圆圈标识 */
.habit-dot.today-col {
  box-shadow: 0 0 0 3rpx rgba(200, 162, 126, 0.2);
}

.habit-dot.completed.today-col {
  box-shadow: 0 0 0 3rpx rgba(200, 162, 126, 0.25),
    0 1rpx 4rpx rgba(200, 162, 126, 0.3);
}

/* 打卡完成动画 */
@keyframes dotComplete {
  0% {
    transform: scale(0.6);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.habit-dot.completed {
  animation: dotComplete 0.35s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* 底部鼓励文案 */
.habit-encourage-text {
  text-align: center;
  font-size: 20rpx;
  color: #bfb0a0;
  margin-top: 12rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid rgba(180, 160, 140, 0.08);
  letter-spacing: 0.3rpx;
}

/* 当日完成情况弹窗 */
.day-detail-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

/* 半透明遮罩层 */
.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 底部弹出卡片 */
.popup-card {
  position: relative;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx 32rpx 48rpx;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.3s ease;
  max-height: 70vh;
  overflow-y: auto;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 弹窗标题区域 */
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0ebe3;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.popup-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999999;
  background: #f5f5f5;
  border-radius: 50%;
}

/* 弹窗正文区域 */
.popup-content {
  min-height: 200rpx;
}

/* 无记录状态 */
.popup-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999999;
}

/* 有记录状态 - 习惯列表 */
.popup-habits {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.popup-habit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f9f5ef;
  border-radius: 16rpx;
}

.habit-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.habit-emoji {
  font-size: 32rpx;
}

.habit-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.habit-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.habit-status.done {
  background: rgba(200, 162, 126, 0.2);
  color: #8b7355;
}

.habit-status.undone {
  background: #f0f0f0;
  color: #999999;
}

.habit-count {
  font-size: 22rpx;
  color: #8b7355;
}

/* 底部按钮 */
.popup-footer {
  margin-top: 32rpx;
}

.popup-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #c8a27e 0%, #a1886f 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(161, 136, 111, 0.3);
}

.popup-btn::after {
  border: none;
}

.popup-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}
