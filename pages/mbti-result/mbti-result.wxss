/* pages/mbti-result/mbti-result.wxss */

/* ========== 动画定义 ========== */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes barGrow {
  from {
    width: 0;
  }
}

@keyframes glow {
  0%,
  100% {
    opacity: 0.5;
  }
  50% {
    opacity: 1;
  }
}

@keyframes shine {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(200%);
  }
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.8;
  }
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* ========== 基础容器 ========== */
.result-container {
  min-height: 100vh;
  background: radial-gradient(
    120% 120% at 20% 20%,
    #f9f3ea 0%,
    #f5eddf 35%,
    #efe3d2 70%,
    #f9f3ea 100%
  );
  padding: 30rpx;
  padding-bottom: 60rpx;
}

/* ========== 动画类 ========== */
.fade-in {
  animation: fadeIn 0.6s ease-out forwards;
}

.slide-up {
  animation: slideUp 0.6s ease-out forwards;
}

.delay-1 {
  animation-delay: 0.1s;
  opacity: 0;
}
.delay-2 {
  animation-delay: 0.2s;
  opacity: 0;
}
.delay-3 {
  animation-delay: 0.3s;
  opacity: 0;
}
.delay-4 {
  animation-delay: 0.4s;
  opacity: 0;
}

.animate-bar {
  animation: barGrow 1s ease-out forwards;
  animation-delay: 0.5s;
}

/* ========== 页面头部 ========== */
.page-header {
  text-align: center;
  padding: 20rpx 0 30rpx;
}

.header-badge {
  display: inline-block;
  background: linear-gradient(135deg, #c9a977 0%, #b58c64 100%);
  color: #ffffff;
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  margin-bottom: 16rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #6b5236;
  letter-spacing: 4rpx;
}

.header-line {
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #c9a977, #b58c64);
  border-radius: 2rpx;
  margin: 16rpx auto 0;
}

/* ========== 结果主卡片 ========== */
.result-card {
  position: relative;
  background: linear-gradient(
    145deg,
    #c9a977 0%,
    #b58c64 35%,
    #9c7a58 65%,
    #8b7355 100%
  );
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  text-align: center;
  color: #ffffff;
  margin-bottom: 24rpx;
  box-shadow: 0 20rpx 50rpx rgba(139, 115, 85, 0.32),
    0 8rpx 20rpx rgba(139, 115, 85, 0.2),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.2);
  overflow: hidden;
}

.card-glow {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle,
    rgba(255, 255, 255, 0.1) 0%,
    transparent 60%
  );
  pointer-events: none;
}

.result-badge {
  display: inline-flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.2);
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  margin-bottom: 24rpx;
  backdrop-filter: blur(10rpx);
}

.badge-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.badge-text {
  font-size: 24rpx;
  letter-spacing: 2rpx;
}

.result-type-wrapper {
  margin-bottom: 16rpx;
}

.result-type {
  font-size: 96rpx;
  font-weight: 800;
  letter-spacing: 12rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  animation: float 3s ease-in-out infinite;
}

.type-underline {
  width: 120rpx;
  height: 6rpx;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.8),
    transparent
  );
  margin: 0 auto;
  border-radius: 3rpx;
}

.result-name {
  font-size: 38rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
}

.result-divider {
  width: 200rpx;
  height: 1rpx;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.4),
    transparent
  );
  margin: 0 auto 20rpx;
}

.result-desc {
  font-size: 26rpx;
  line-height: 1.8;
  opacity: 0.95;
  max-width: 90%;
  margin: 0 auto;
}

/* ========== 个性总结卡片 ========== */
.summary-card {
  background: linear-gradient(135deg, #ffffff 0%, #fbf9f5 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(139, 115, 85, 0.12),
    0 2rpx 8rpx rgba(139, 115, 85, 0.06);
}

.summary-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.summary-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #6b5236;
}

.summary-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.summary-tag {
  display: flex;
  align-items: center;
  padding: 14rpx 22rpx;
  border-radius: 30rpx;
  border: 1rpx solid rgba(139, 115, 85, 0.12);
}

.tag-letter {
  font-size: 30rpx;
  font-weight: 800;
  margin-right: 10rpx;
}

.tag-desc {
  font-size: 24rpx;
  font-weight: 500;
}

/* 标签颜色方案 */
.tag-blue {
  background: linear-gradient(135deg, #e8f6fa 0%, #d5eef5 100%);
}
.tag-blue .tag-letter {
  color: #3b9db2;
}
.tag-blue .tag-desc {
  color: #368ca0;
}

.tag-yellow {
  background: linear-gradient(135deg, #fdf2de 0%, #f8e7c6 100%);
}
.tag-yellow .tag-letter {
  color: #d59b35;
}
.tag-yellow .tag-desc {
  color: #bf872d;
}

.tag-green {
  background: linear-gradient(135deg, #e5f7ef 0%, #d0f0e3 100%);
}
.tag-green .tag-letter {
  color: #27a06f;
}
.tag-green .tag-desc {
  color: #23855f;
}

.tag-purple {
  background: linear-gradient(135deg, #f5eefd 0%, #ede1f8 100%);
}
.tag-purple .tag-letter {
  color: #9a6ac5;
}
.tag-purple .tag-desc {
  color: #8655b0;
}

/* ========== 维度分析区域 ========== */
.dimensions-section {
  background: linear-gradient(135deg, #ffffff 0%, #fdfcfa 100%);
  border-radius: 28rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(139, 115, 85, 0.12),
    0 4rpx 12rpx rgba(139, 115, 85, 0.06);
}

.section-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.section-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.section-title-wrapper {
  flex: 1;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #6b5236;
  margin-bottom: 6rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #8b7355;
}

.dimensions-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* ========== 单个维度卡片 ========== */
.dimension-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 4rpx;
  animation: slideUp 0.5s ease-out forwards;
  opacity: 0;
  border: 1rpx solid #f0e6d8;
  box-shadow: 0 8rpx 24rpx rgba(139, 115, 85, 0.08);
}

/* ========== 维度结果标题 ========== */
.dimension-result-header {
  text-align: center;
  margin-bottom: 16rpx;
}

.result-percent {
  font-size: 36rpx;
  font-weight: 800;
  margin-right: 8rpx;
}

.result-label {
  font-size: 32rpx;
  font-weight: 700;
}

/* ========== 胶囊式进度条 ========== */
.capsule-bar-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.capsule-label {
  min-width: 70rpx;
}

.label-left {
  text-align: right;
}

.label-right {
  text-align: left;
}

.label-text {
  font-size: 24rpx;
  color: #888888;
  font-weight: 500;
}

.capsule-bar {
  flex: 1;
  height: 16rpx;
  display: flex;
  border-radius: 8rpx;
  overflow: visible;
  position: relative;
  background: #f1e7d8;
}

.capsule-fill-left {
  height: 100%;
  border-radius: 8rpx 0 0 8rpx;
  transition: width 1s ease-out;
}

.capsule-fill-right {
  height: 100%;
  border-radius: 0 8rpx 8rpx 0;
  transition: width 1s ease-out;
}

/* 圆形指示器 */
.capsule-indicator {
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 24rpx;
  background: #ffffff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.22);
  z-index: 10;
}

/* ========== 维度颜色方案 ========== */
/* 蓝绿 - E/I 外向/内向 */
.dimension-blue .result-percent,
.dimension-blue .result-label {
  color: #3b9db2;
}

.dimension-blue .capsule-fill-left {
  background: linear-gradient(90deg, #3b9db2 0%, #4fb7cd 100%);
}

.dimension-blue .capsule-fill-right {
  background: linear-gradient(90deg, #9ad9e7 0%, #c2ecf4 100%);
}

.dimension-blue .dimension-hint {
  border-left-color: #3b9db2;
  background: rgba(59, 157, 178, 0.12);
}

/* 琥珀黄 - S/N 实感/直觉 */
.dimension-yellow .result-percent,
.dimension-yellow .result-label {
  color: #d59b35;
}

.dimension-yellow .capsule-fill-left {
  background: linear-gradient(90deg, #d59b35 0%, #e5b557 100%);
}

.dimension-yellow .capsule-fill-right {
  background: linear-gradient(90deg, #f2d9a2 0%, #f7e8c4 100%);
}

.dimension-yellow .dimension-hint {
  border-left-color: #d59b35;
  background: rgba(213, 155, 53, 0.12);
}

/* 翡翠绿 - T/F 思考/情感 */
.dimension-green .result-percent,
.dimension-green .result-label {
  color: #27a06f;
}

.dimension-green .capsule-fill-left {
  background: linear-gradient(90deg, #27a06f 0%, #3cbc86 100%);
}

.dimension-green .capsule-fill-right {
  background: linear-gradient(90deg, #8ddbb6 0%, #b9ecd4 100%);
}

.dimension-green .dimension-hint {
  border-left-color: #27a06f;
  background: rgba(39, 160, 111, 0.12);
}

/* 薰衣紫 - J/P 判断/感知 */
.dimension-purple .result-percent,
.dimension-purple .result-label {
  color: #9a6ac5;
}

.dimension-purple .capsule-fill-left {
  background: linear-gradient(90deg, #9a6ac5 0%, #b083d8 100%);
}

.dimension-purple .capsule-fill-right {
  background: linear-gradient(90deg, #cdb1ea 0%, #e0d2f4 100%);
}

.dimension-purple .dimension-hint {
  border-left-color: #9a6ac5;
  background: rgba(154, 106, 197, 0.12);
}

/* ========== 维度说明 ========== */
.dimension-hint {
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #d4b896;
  background: rgba(184, 149, 106, 0.08);
}

.hint-text {
  font-size: 24rpx;
  color: #888888;
  line-height: 1.6;
}

/* ========== AI 解读区域 ========== */
.ai-section {
  margin-bottom: 24rpx;
}

.ai-card {
  position: relative;
  background: linear-gradient(145deg, #ffffff 0%, #faf4ea 100%);
  border-radius: 28rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  box-shadow: 0 12rpx 40rpx rgba(139, 115, 85, 0.12),
    0 4rpx 12rpx rgba(139, 115, 85, 0.06);
  overflow: hidden;
  border: 1rpx solid rgba(139, 115, 85, 0.12);
}

.ai-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
}

.ai-circle {
  position: absolute;
  border-radius: 50%;
  background: linear-gradient(
    135deg,
    rgba(184, 149, 106, 0.12),
    rgba(156, 122, 90, 0.08)
  );
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -80rpx;
  right: -60rpx;
  animation: pulse 4s ease-in-out infinite;
}

.circle-2 {
  width: 120rpx;
  height: 120rpx;
  bottom: -40rpx;
  left: -30rpx;
  animation: pulse 4s ease-in-out infinite 1s;
}

.circle-3 {
  width: 80rpx;
  height: 80rpx;
  top: 40rpx;
  left: 20rpx;
  animation: pulse 4s ease-in-out infinite 2s;
}

.ai-content {
  position: relative;
  z-index: 1;
  margin-bottom: 30rpx;
}

.ai-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.ai-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #6b5236;
  margin-bottom: 12rpx;
}

.ai-desc {
  font-size: 26rpx;
  color: #8b7355;
  line-height: 1.6;
}

/* AI 解读预览 */
.ai-preview {
  position: relative;
  z-index: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 26rpx;
  justify-content: center;
}

.ai-preview-item {
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(139, 115, 85, 0.08);
  color: #6b5236;
  font-size: 22rpx;
  border: 1rpx solid rgba(139, 115, 85, 0.12);
}

/* ========== AI 按钮 - 高亮设计 ========== */
.ai-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 32rpx 40rpx;
  background: linear-gradient(
    135deg,
    #c9a977 0%,
    #b58c64 35%,
    #9c7a58 65%,
    #8b7355 100%
  );
  border-radius: 20rpx;
  border: none;
  overflow: hidden;
  box-shadow: 0 12rpx 30rpx rgba(139, 115, 85, 0.28),
    0 4rpx 12rpx rgba(139, 115, 85, 0.2),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.25);
}

.ai-btn::after {
  border: none;
}

.btn-spark {
  font-size: 32rpx;
  margin-right: 12rpx;
  animation: glow 2s ease-in-out infinite;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 4rpx;
}

.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: shine 3s ease-in-out infinite;
}

/* AI 生成内容提示 */
.ai-disclaimer {
  text-align: center;
  font-size: 20rpx;
  color: #9c9c9c;
  margin-top: 20rpx;
  line-height: 1.4;
}

.glow-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(139, 115, 85, 0.26),
    0 2rpx 8rpx rgba(139, 115, 85, 0.18);
}

/* ========== AI 解读内容 ========== */
.analysis-content {
  background: linear-gradient(135deg, #ffffff 0%, #faf4ea 100%);
  border-radius: 28rpx;
  padding: 0;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(139, 115, 85, 0.12),
    0 4rpx 12rpx rgba(139, 115, 85, 0.06);
  overflow: hidden;
}

.analysis-header {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #f7f0e5 0%, #f2e7d8 100%);
  border-bottom: 1rpx solid rgba(139, 115, 85, 0.14);
}

.analysis-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.analysis-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 700;
  color: #6b5236;
}

.analysis-badge {
  font-size: 22rpx;
  color: #8b7355;
  background: rgba(139, 115, 85, 0.15);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.analysis-body {
  padding: 30rpx;
}

.analysis-text {
  font-size: 28rpx;
  color: #5a4632;
  line-height: 2;
  white-space: pre-wrap;
}

/* AI 解读加载态 */
.ai-loading-hint {
  font-size: 26rpx;
  color: #8b7355;
  margin-bottom: 20rpx;
}

.ai-skeleton {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.ai-skeleton-line {
  height: 22rpx;
  border-radius: 999rpx;
  background: linear-gradient(
    90deg,
    rgba(229, 219, 205, 0.4) 0%,
    rgba(229, 219, 205, 0.8) 50%,
    rgba(229, 219, 205, 0.4) 100%
  );
  background-size: 200% 100%;
  animation: shine 2.2s ease-in-out infinite;
}

.ai-skeleton-line.short {
  width: 70%;
}

/* AI 解读错误态 */
.ai-error-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #6b5236;
  margin-bottom: 10rpx;
}

.ai-error-desc {
  font-size: 24rpx;
  color: #9c8a72;
  line-height: 1.6;
}

/* AI 解读分段 */
.analysis-section-list {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
  margin-bottom: 24rpx;
}

.analysis-section-card {
  padding: 24rpx;
  border-radius: 20rpx;
  background: #ffffff;
  border: 1rpx solid rgba(139, 115, 85, 0.12);
  box-shadow: 0 8rpx 22rpx rgba(139, 115, 85, 0.08);
}

.analysis-section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #6b5236;
  margin-bottom: 12rpx;
}

.analysis-section-insight {
  font-size: 25rpx;
  color: #8b7355;
  background: rgba(139, 115, 85, 0.08);
  border-radius: 12rpx;
  padding: 10rpx 14rpx;
  margin-bottom: 14rpx;
}

.analysis-section-body {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.analysis-section-line {
  font-size: 28rpx;
  color: #5a4632;
  line-height: 1.8;
}

.analysis-section-bullets {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-top: 6rpx;
}

.analysis-section-bullet {
  font-size: 26rpx;
  color: #6b5236;
  line-height: 1.7;
}

.analysis-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 10rpx;
}

.analysis-actions button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 18rpx;
  font-size: 26rpx;
  padding: 22rpx 20rpx;
}

.analysis-actions button::after {
  border: none;
}

/* ========== 操作按钮区域 ========== */
.action-section {
  margin-top: 10rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-buttons button {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 28rpx;
  padding: 28rpx 20rpx;
  transition: all 0.3s ease;
}

.action-buttons button::after {
  border: none;
}

.btn-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #c9a977 0%, #b58c64 50%, #8b7355 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(139, 115, 85, 0.26),
    inset 0 2rpx 0 rgba(255, 255, 255, 0.15);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.22);
}

.btn-secondary {
  background: linear-gradient(135deg, #ffffff 0%, #f8f1e6 100%);
  color: #6b5236;
  border: 2rpx solid rgba(139, 115, 85, 0.26);
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.12);
}

.btn-secondary:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #f4ebdf 0%, #e9ddcd 100%);
}

/* ========== 底部留白 ========== */
.footer-space {
  height: 40rpx;
}

/* ========== 响应式微调 ========== */
@media screen and (max-width: 350px) {
  .result-type {
    font-size: 80rpx;
  }

  .capsule-label {
    min-width: 50rpx;
  }

  .label-letter {
    font-size: 28rpx;
  }
}
