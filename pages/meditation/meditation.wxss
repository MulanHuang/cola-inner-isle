/* pages/meditation/meditation.wxss */
.meditation-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 60rpx 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 固定头部区域 */
.fixed-header {
  flex-shrink: 0;
}

/* 可滚动的音频列表scroll-view */
.audio-scroll-view {
  flex: 1;
  overflow: hidden;
}

/* 列表底部安全间距 */
.audio-list-bottom-space {
  height: 120rpx;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #999999;
}

/* 分类标签 */
.category-tabs {
  white-space: nowrap;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.category-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 24rpx;
  margin: 0 8rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.08);
  transition: all 0.3s;
}

.category-tab.active {
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.2);
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333333;
}

.category-tab.active .category-name {
  color: #ffffff;
}

/* 音频列表 */
.audio-list {
  padding: 0 20rpx;
}

.audio-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.audio-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.audio-info {
  flex: 1;
  min-width: 0;
}

.audio-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-desc {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-meta {
  display: flex;
  font-size: 22rpx;
  color: #cccccc;
}

.audio-duration {
  margin-right: 20rpx;
}

.audio-play-icon {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  border-radius: 50%;
  color: #ffffff;
  font-size: 28rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
  /* 三角形图标视觉重心偏左，添加左偏移使其视觉居中 */
  padding-left: 4rpx;
}
