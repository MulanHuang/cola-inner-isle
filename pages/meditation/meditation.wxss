/* ============ 第一层封面样式 ============ */
.cover-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: linear-gradient(180deg, #faf8f5 0%, #f5f0e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 1;
  transition: opacity 0.6s ease-out;
}

.cover-layer.cover-hidden {
  opacity: 0;
  pointer-events: none;
}

.cover-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

/* 呼吸光圈容器 */
.breath-circle-wrapper {
  position: relative;
  width: 420rpx;
  height: 420rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 80rpx;
}

/* 呼吸光圈 - 外圈 */
.breath-circle {
  position: absolute;
  width: 380rpx;
  height: 380rpx;
  border-radius: 50%;
  background: radial-gradient(
    circle,
    rgba(184, 149, 106, 0.45) 0%,
    rgba(184, 149, 106, 0.25) 40%,
    rgba(184, 149, 106, 0.1) 70%,
    transparent 100%
  );
  box-shadow: 0 0 80rpx rgba(184, 149, 106, 0.4),
    0 0 160rpx rgba(184, 149, 106, 0.25), 0 0 240rpx rgba(184, 149, 106, 0.15);
  animation: breathe 5s ease-in-out infinite;
}

/* 呼吸光圈 - 内圈 */
.breath-circle-inner {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: radial-gradient(
    circle,
    rgba(255, 215, 100, 0.9) 0%,
    rgba(255, 195, 80, 0.6) 40%,
    rgba(230, 180, 80, 0.3) 70%,
    transparent 100%
  );
  box-shadow: 0 0 50rpx rgba(255, 200, 80, 0.6),
    0 0 100rpx rgba(255, 180, 60, 0.3);
  animation: breathe-inner 5s ease-in-out infinite;
}

/* 呼吸动画 - 外圈 */
@keyframes breathe {
  0%,
  100% {
    transform: scale(0.85);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.15);
    opacity: 1;
  }
}

/* 呼吸动画 - 内圈（略有延迟，形成层次感） */
@keyframes breathe-inner {
  0%,
  100% {
    transform: scale(0.9);
    opacity: 0.5;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.9;
  }
}

/* 封面文案 */
.cover-text {
  text-align: center;
  margin-bottom: 100rpx;
}

.cover-title {
  font-size: 52rpx;
  font-weight: 600;
  color: #5a4a3a;
  margin-bottom: 24rpx;
  letter-spacing: 4rpx;
}

.cover-subtitle {
  font-size: 28rpx;
  color: #8b7355;
  letter-spacing: 2rpx;
}

/* 进入按钮容器 */
.cover-btn-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: btn-fade-in 1s ease-out 0.5s both;
}

/* 按钮背后脉冲光晕 */
.cover-btn-glow {
  position: absolute;
  width: 280rpx;
  height: 80rpx;
  border-radius: 50rpx;
  background: radial-gradient(
    ellipse,
    rgba(184, 149, 106, 0.4) 0%,
    rgba(184, 149, 106, 0.15) 50%,
    transparent 70%
  );
  animation: btn-glow-pulse 3s ease-in-out infinite;
  z-index: 0;
}

/* 进入按钮 */
.cover-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 28rpx 72rpx;
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  border-radius: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(139, 115, 85, 0.3),
    0 2rpx 8rpx rgba(139, 115, 85, 0.2);
  transition: all 0.3s ease;
  z-index: 1;
}

.cover-btn .btn-text {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 500;
  letter-spacing: 4rpx;
}

.cover-btn .btn-arrow {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  transition: transform 0.3s ease;
}

.cover-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.25);
}

.cover-btn:active .btn-arrow {
  transform: translateX(6rpx);
}

/* 按钮渐入动画 */
@keyframes btn-fade-in {
  0% {
    opacity: 0;
    transform: translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 脉冲光晕动画 - 与呼吸光圈同频 */
@keyframes btn-glow-pulse {
  0%,
  100% {
    transform: scale(0.9);
    opacity: 0.4;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.8;
  }
}

/* ============ 自定义导航栏样式 ============ */

/* 自定义导航栏 - 覆盖全局样式 */
.custom-navbar .navbar-content {
  height: 88rpx;
  display: flex !important;
  align-items: center;
  justify-content: space-between !important;
  padding: 0 16rpx;
}

/* 左侧返回按钮区域 */
.custom-navbar .nav-left {
  width: 80rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  position: relative;
  z-index: 10;
}

.custom-navbar .back-icon {
  font-size: 64rpx;
  color: #5a4a3a;
  font-weight: 300;
  line-height: 1;
  padding-left: 8rpx;
}

.custom-navbar .nav-left:active .back-icon {
  opacity: 0.5;
}

/* 中间标题区域 */
.custom-navbar .navbar-center {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.custom-navbar .navbar-logo {
  width: 48rpx;
  height: 48rpx;
  margin-right: 12rpx;
  padding: 0;
  box-shadow: none;
  background: transparent;
}

.custom-navbar .navbar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #b08a61;
  background: none;
  -webkit-background-clip: unset;
  -webkit-text-fill-color: #b08a61;
  letter-spacing: normal;
  text-shadow: none;
}

/* 右侧占位区域（保持对称） */
.custom-navbar .nav-right {
  width: 80rpx;
}

.meditation-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 60rpx 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 固定头部区域 */
.fixed-header {
  flex-shrink: 0;
}

/* 可滚动的音频列表scroll-view */
.audio-scroll-view {
  flex: 1;
  overflow: hidden;
}

/* 列表底部安全间距 */
.audio-list-bottom-space {
  height: 120rpx;
}

/* 头部 */
.header {
  text-align: center;
  padding: 40rpx 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 26rpx;
  color: #999999;
}

/* 分类标签 */
.category-tabs {
  white-space: nowrap;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.category-tab {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 24rpx;
  margin: 0 8rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.08);
  transition: all 0.3s;
}

.category-tab.active {
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.2);
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333333;
}

.category-tab.active .category-name {
  color: #ffffff;
}

/* 音频列表 */
.audio-list {
  padding: 0 20rpx;
}

.audio-item {
  display: flex;
  align-items: center;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}

.audio-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.audio-info {
  flex: 1;
  min-width: 0;
}

.audio-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-desc {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-meta {
  display: flex;
  font-size: 22rpx;
  color: #cccccc;
}

.audio-duration {
  margin-right: 20rpx;
}

.audio-play-icon {
  min-width: 80rpx;
  height: 56rpx;
  padding: 0 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  border-radius: 28rpx;
  color: #ffffff;
  font-size: 24rpx;
  flex-shrink: 0;
  margin-left: 20rpx;
}
