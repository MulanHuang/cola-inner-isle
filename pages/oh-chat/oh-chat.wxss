/* pages/oh-chat/oh-chat.wxss */

/* ===================== */
/*        基础样式        */
/* ===================== */

/* 防止横向滚动，统一背景色 */
page {
  overflow-x: hidden;
  background: linear-gradient(180deg, #f6f1e7 0%, #f5efe6 35%, #f5f1e8 100%);
  box-sizing: border-box;
  height: 100%;
}

/* 自定义导航栏（对齐 chat 页头部） */
.oh-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 20;
  background: linear-gradient(
    180deg,
    #f6efe4 0%,
    rgba(246, 239, 227, 0.96) 100%
  );
  box-shadow: 0 2rpx 12rpx rgba(139, 115, 85, 0.12);
  backdrop-filter: blur(14rpx);
}

.oh-navbar-content {
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
}

.oh-nav-left,
.oh-nav-right {
  width: 96rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.oh-nav-right {
  justify-content: flex-end;
}

.oh-back-icon {
  font-size: 64rpx;
  color: #5a4a3a;
  font-weight: 300;
  line-height: 1;
  padding-left: 4rpx;
}

.oh-nav-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

/* ===================== */
/*      整体页面容器      */
/* ===================== */

.chat-page-root {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f1e8;
  box-sizing: border-box;
  overflow: hidden;
  background: transparent;
}

/* ===================== */
/*    OH 卡牌展示区域     */
/* ===================== */

.card-hero {
  height: 38vh;
  min-height: 300rpx;
  max-height: 520rpx;
  background: #e8dbc9;
  border-radius: 22rpx;
  padding: 18rpx;
  margin: 20rpx 24rpx 0;
  box-shadow: 0 10rpx 24rpx rgba(124, 98, 69, 0.08);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex-shrink: 0;
}

.card-preview {
  flex: 1;
  position: relative;
  border-radius: 18rpx;
  overflow: hidden;
  background: #d8c6b0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}

.card-img {
  width: 100%;
  height: 100%;
}

.word-tag {
  position: absolute;
  left: 16rpx;
  top: 16rpx;
  background: linear-gradient(135deg, #c8956a 0%, #a06b3a 100%);
  color: #ffffff;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  box-shadow: 0 6rpx 16rpx rgba(100, 70, 40, 0.35);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.card-placeholder {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #8c6b47;
  font-size: 26rpx;
}

.user-note {
  background: #fff5eb;
  border-radius: 14rpx;
  padding: 12rpx 14rpx;
  font-size: 26rpx;
  color: #5a4330;
  line-height: 1.5;
}

.user-note.placeholder {
  background: linear-gradient(135deg, #fff8f0 0%, #ffefd8 100%);
  color: #8b6914;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  padding: 16rpx 20rpx;
  border: 1rpx dashed #d4a852;
  box-shadow: 0 2rpx 8rpx rgba(180, 140, 60, 0.12);
}

/* ===================== */
/*       消息列表        */
/* ===================== */

.chat-scroll {
  flex: 1;
  padding: 24rpx 24rpx 150rpx;
  box-sizing: border-box;
  overflow-y: auto;
  background-color: #f5f1e8;
  transition: padding-bottom 0.25s ease;
}

/* ===================== */
/*   消息行（左右对齐）    */
/* ===================== */

.msg-row {
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
  width: 100%;
}

.msg-row-other {
  align-items: flex-start;
}

.msg-row-self {
  align-items: flex-end;
}

/* ===================== */
/*      气泡样式         */
/* ===================== */

.msg-bubble {
  display: inline-block;
  padding: 14rpx 20rpx;
  border-radius: 16rpx;
  word-break: break-word;
  word-wrap: break-word;
}

.msg-bubble-other {
  max-width: 78%;
  background: #ffffff;
  border-radius: 20rpx 20rpx 20rpx 8rpx;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.03);
}

.msg-bubble-self {
  max-width: 68%;
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  color: #ffffff;
  border-radius: 20rpx 20rpx 8rpx 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.msg-bubble-loading {
  padding: 14rpx 20rpx;
}

/* ===================== */
/*       文本样式        */
/* ===================== */

.msg-text {
  font-size: 32rpx;
  line-height: 1.7;
  text-align: left;
  word-wrap: break-word;
  white-space: pre-wrap;
}

/* ===================== */
/*      打字指示器       */
/* ===================== */

.typing-indicator {
  display: flex;
  align-items: center;
  padding: 4rpx 0;
}

.dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #b08a61;
  margin: 0 6rpx;
  animation: typing 1.4s infinite;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%,
  70%,
  100% {
    opacity: 0.25;
    transform: translateY(0);
  }
  30% {
    opacity: 1;
    transform: translateY(-8rpx);
  }
}

.scroll-bottom-anchor {
  height: 44rpx;
  width: 100%;
}

/* ===================== */
/*   底部悬浮输入卡片      */
/* ===================== */

.chat-composer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding-top: 12rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 12rpx);
  background: rgba(245, 241, 232, 0.95);
  backdrop-filter: blur(2px);
  -webkit-backdrop-filter: blur(10px);
  box-sizing: border-box;
  z-index: 100;
}

/* ===================== */
/*   底部极简输入栏        */
/* ===================== */

.composer-input-bar {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
  padding: 14rpx 24rpx 22rpx;
  min-height: 78rpx;
}

.composer-input-field {
  flex: 1;
  background: rgba(255, 255, 255, 0.96);
  border-radius: 36rpx;
  padding: 18rpx 26rpx;
  display: flex;
  align-items: center;
  min-height: 78rpx;
  max-height: 240rpx;
  box-sizing: border-box;
  overflow: hidden;
  transition: border-radius 0.2s ease;
}

/* 多行展开时调整圆角 */
.composer-input-field.input-expanded {
  border-radius: 26rpx;
  align-items: flex-end;
}

.composer-textarea {
  width: 100%;
  font-size: 30rpx;
  color: #5a4a3a;
  background: transparent;
  line-height: 1.6;
  min-height: 42rpx;
  max-height: 200rpx;
  box-sizing: border-box;
}

.composer-input-placeholder {
  color: #9c8f80;
  font-size: 30rpx;
}

.composer-icon-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border-radius: 50%;
  transition: all 0.15s ease;
}

.composer-icon-btn:active {
  opacity: 0.4;
  background: rgba(180, 140, 110, 0.08);
}

.composer-icon-img {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.composer-send-btn {
  width: 64rpx;
  height: 64rpx;
  background: #07c160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
  transition: all 0.2s ease;
  animation: sendBtnAppear 0.2s ease;
}

@keyframes sendBtnAppear {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.composer-send-btn:active {
  transform: scale(0.92);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.4);
}

.composer-send-icon {
  width: 30rpx;
  height: 30rpx;
}
