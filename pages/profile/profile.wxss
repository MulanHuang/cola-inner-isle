/* pages/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

.header-decoration {
  font-size: 24rpx;
  position: absolute;
  animation: float 3s ease-in-out infinite;
  opacity: 0.6;
}

.decoration-left {
  left: 40rpx;
  top: 30rpx;
}

.decoration-right {
  right: 40rpx;
  top: 30rpx;
  animation-delay: 1.5s;
}

.app-logo {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 16rpx;
  display: block;
  /* 圆形背景 */
  border-radius: 50%;
  background: #ffffff;
  padding: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(212, 165, 116, 0.15);
}

.app-title {
  font-size: 32rpx;
  font-weight: 700;
  /* 渐变色效果 */
  background: linear-gradient(135deg, #d4a574 0%, #b8956a 50%, #8b7355 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  /* 增加字间距，更有呼吸感 */
  letter-spacing: 6rpx;
  margin-bottom: 6rpx;
  /* 柔和发光效果 */
  filter: drop-shadow(0 2rpx 8rpx rgba(212, 165, 116, 0.3));
}

.app-subtitle {
  font-size: 20rpx;
  color: #b8956a;
  letter-spacing: 1rpx;
  font-family: "Georgia", serif;
  font-style: italic;
  margin-bottom: 4rpx;
}

.app-tagline {
  font-size: 22rpx;
  color: #999999;
  letter-spacing: 0.5rpx;
}

/* 装饰元素浮动动画 */
@keyframes float {
  0%,
  100% {
    transform: translateY(0) rotate(0deg);
    opacity: 0.8;
  }
  50% {
    transform: translateY(-10rpx) rotate(5deg);
    opacity: 1;
  }
}

/* 用户信息卡片 - 优化版 */
.user-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #b8956a 0%, #8b7355 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(139, 115, 85, 0.2);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 6rpx;
}

.user-meta {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.edit-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  font-size: 28rpx;
}

/* 统计数据 - 优化版 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.06);
  transition: all 0.3s;
}

.stat-item:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(139, 115, 85, 0.1);
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #8b7355;
  margin-bottom: 6rpx;
}

.stat-label {
  font-size: 20rpx;
  color: #999999;
}

/* 菜单列表 - 优化版 */
.menu-list {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(139, 115, 85, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f1e8;
  transition: background 0.3s;
}

.menu-item:active {
  background: rgba(245, 241, 232, 0.3);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f1e8;
  border-radius: 14rpx;
  font-size: 32rpx;
  margin-right: 16rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.menu-arrow {
  font-size: 28rpx;
  color: #cccccc;
}

/* 设置区域 */
.settings-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 0 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.08);
}
