  0% {
    transform: rotate(var(--angle, 0deg)) translateX(var(--x, 0))
      translateY(var(--y, 0)) scale(1);
  }
  50% {
    transform: rotate(calc(var(--angle, 0deg) * 0.3))
      translateX(calc(var(--x, 0) * 0.5)) translateY(calc(var(--y, 0) - 60rpx))
      scale(1.5);
  }
  100% {
    transform: rotate(calc(var(--angle, 0deg) * 0.5))
      translateX(calc(var(--x, 0) * 0.6)) translateY(calc(var(--y, 0) - 40rpx))
