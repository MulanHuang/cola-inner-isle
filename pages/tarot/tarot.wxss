.tarot-container .stars-container::before {
  content: "";
  position: absolute;
  top: 0;
  left: -50%;
  width: 200%;
  height: 100%;
  background: radial-gradient(
      ellipse 80% 50% at 20% 30%,
      var(--aurora-cyan) 0%,
      transparent 50%
    ),
    radial-gradient(
      ellipse 60% 40% at 80% 20%,
      var(--aurora-violet) 0%,
      transparent 50%
    ),
    radial-gradient(
      ellipse 70% 60% at 50% 80%,
      var(--aurora-gold) 0%,
      transparent 50%
    );
  animation: aurora-drift 25s ease-in-out infinite;
  pointer-events: none;
  opacity: 0.8;
}

.tarot-container .stars-container::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 100%;
  background: radial-gradient(
      ellipse 50% 80% at 70% 60%,
      var(--aurora-violet) 0%,
      transparent 45%
    ),
    radial-gradient(
      ellipse 80% 40% at 30% 70%,
      var(--aurora-cyan) 0%,
      transparent 45%
    );
  animation: aurora-drift-reverse 30s ease-in-out infinite;
  pointer-events: none;
  opacity: 0.6;
}

@keyframes aurora-drift {
  0%,
  100% {
    transform: translateX(0) translateY(0) rotate(0deg);
  }
  25% {
    transform: translateX(5%) translateY(-3%) rotate(1deg);
  }
  50% {
    transform: translateX(-3%) translateY(5%) rotate(-1deg);
  }
  75% {
    transform: translateX(-5%) translateY(-2%) rotate(0.5deg);
  }
}

@keyframes aurora-drift-reverse {
  0%,
  100% {
    transform: translateX(0) translateY(0) rotate(0deg);
  }
  25% {
    transform: translateX(-4%) translateY(4%) rotate(-0.5deg);
  }
  50% {
    transform: translateX(4%) translateY(-3%) rotate(1deg);
  }
  75% {
    transform: translateX(2%) translateY(2%) rotate(-0.5deg);
  }
}

