/* pages/tarot/tarot.wxss */
/* ============================================================ */
/* 塔罗牌抽取页面 - 专业级动画与交互样式                          */
/* 阶段: idle → shuffling → spreading → selecting → selected → result */
/* 升级版: 神秘、温柔、灵性、治愈、iOS级别质感                      */
/* 增强版: 极光流光 + 玻璃态 + 灵动漂浮 + 脉冲发光                   */
/* ============================================================ */

/* ============================================================ */
/* CSS 变量 - 可配置参数                                         */
/* ============================================================ */
page {
  --shuffle-duration: 3.5s;
  --spread-duration: 0.8s;
  --fly-duration: 0.5s;
  --fade-duration: 0.4s;
  --card-width: 70rpx;
  --card-height: 112rpx;
  --fly-scale: 1.4;
  --card-select-scale: 2.8;
  --card-select-duration: 0.4s;
  /* 升级色彩系统 - 神秘紫金配色 */
  --primary-gold: #d4af37;
  --primary-gold-light: #f0d78c;
  --primary-gold-dark: #b8942d;
  --primary-purple: #4a3a6b;
  --primary-purple-light: #6b5a8e;
  --primary-purple-dark: #2d2440;
  --accent-violet: #7b68a6;
  --bg-mystical: linear-gradient(
    180deg,
    #1a1428 0%,
    #2d2440 30%,
    #3d2a5c 60%,
    #4a3a6b 100%
  );
  --bg-cream: #f5f1e8;
  --glow-gold: rgba(212, 175, 55, 0.6);
  --glow-purple: rgba(123, 104, 166, 0.4);
  /* 新增 - 极光流光变量 */
  --aurora-cyan: rgba(100, 200, 255, 0.06);
  --aurora-violet: rgba(180, 100, 255, 0.05);
  --aurora-gold: rgba(212, 175, 55, 0.05);
  /* 覆盖全局背景色 - 神秘紫色 */
  background: linear-gradient(
    180deg,
    #1a1428 0%,
    #2d2440 25%,
    #3d2a5c 50%,
    #4a3a6b 75%,
    #5a4a7b 100%
  ) !important;
}

.tarot-container {
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  padding-top: env(safe-area-inset-top);
  min-height: 100vh;
  overflow: hidden;
  /* 神秘紫色渐变背景 - 覆盖全局米色背景 */
  background: linear-gradient(
    180deg,
    #1a1428 0%,
    #2d2440 25%,
    #3d2a5c 50%,
    #4a3a6b 75%,
    #5a4a7b 100%
  );
}

/* 档案完善提示条 - 塔罗主题配色 */
.profile-tip-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 16rpx 20rpx;
  padding: 18rpx 24rpx;
  background: linear-gradient(
    90deg,
    rgba(212, 175, 55, 0.15) 0%,
    rgba(180, 100, 255, 0.1) 100%
  );
  border-radius: 16rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(212, 175, 55, 0.15);
  position: relative;
  z-index: 10;
}

.profile-tip-content {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 12rpx;
}

.profile-tip-icon {
  font-size: 28rpx;
}

.profile-tip-text {
  font-size: 26rpx;
  color: var(--primary-gold-light, #f0d78c);
  flex: 1;
}

.profile-tip-arrow {
  font-size: 26rpx;
  color: var(--primary-gold, #d4af37);
  font-weight: 500;
}

.profile-tip-close {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.5);
  padding: 8rpx;
  margin-left: 12rpx;
  /* 神秘渐变背景 */
  background: linear-gradient(
    180deg,
    #1a1428 0%,
    #2d2440 25%,
    #3d2a5c 50%,
    #4a3a6b 75%,
    #5a4a7b 100%
  );
  position: relative;
  box-sizing: border-box;
}

/* 顶部柔光径向渐变 */
.tarot-container::before {
  content: "";
  position: fixed;
  top: -100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200%;
  height: 600rpx;
  background: radial-gradient(
    ellipse at center,
    rgba(212, 175, 55, 0.15) 0%,
    rgba(123, 104, 166, 0.1) 30%,
    transparent 70%
  );
  pointer-events: none;
  z-index: 0;
}

/* 中央柔光氛围 - 让视觉重心落在卡牌 */
.tarot-container::after {
  content: "";
  position: fixed;
  top: 35%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120%;
  height: 500rpx;
  background: radial-gradient(
    ellipse at center,
    rgba(212, 175, 55, 0.08) 0%,
    rgba(123, 104, 166, 0.05) 40%,
    transparent 70%
  );
  pointer-events: none;
  z-index: 0;
  animation: ambient-glow 8s ease-in-out infinite;
}

@keyframes ambient-glow {
  0%,
  100% {
    opacity: 0.6;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

/* ============================================================ */
/* 极光流光效果层 - Aurora Background                             */
/* ============================================================ */
.tarot-container .stars-container::before {
  content: "";
  position: absolute;
  top: 0;
  left: -50%;
  width: 200%;
  height: 100%;
  background: radial-gradient(
      ellipse 80% 50% at 20% 30%,
      var(--aurora-cyan) 0%,
      transparent 50%
    ),
    radial-gradient(
      ellipse 60% 40% at 80% 20%,
      var(--aurora-violet) 0%,
      transparent 50%
    ),
    radial-gradient(
      ellipse 70% 60% at 50% 80%,
      var(--aurora-gold) 0%,
      transparent 50%
    );
  animation: aurora-drift 25s ease-in-out infinite;
  pointer-events: none;
  opacity: 0.8;
}

.tarot-container .stars-container::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 100%;
  background: radial-gradient(
      ellipse 50% 80% at 70% 60%,
      var(--aurora-violet) 0%,
      transparent 45%
    ),
    radial-gradient(
      ellipse 80% 40% at 30% 70%,
      var(--aurora-cyan) 0%,
      transparent 45%
    );
  animation: aurora-drift-reverse 30s ease-in-out infinite;
  pointer-events: none;
  opacity: 0.6;
}

@keyframes aurora-drift {
  0%,
  100% {
    transform: translateX(0) translateY(0) rotate(0deg);
  }
  25% {
    transform: translateX(5%) translateY(-3%) rotate(1deg);
  }
  50% {
    transform: translateX(-3%) translateY(5%) rotate(-1deg);
  }
  75% {
    transform: translateX(-5%) translateY(-2%) rotate(0.5deg);
  }
}

@keyframes aurora-drift-reverse {
  0%,
  100% {
    transform: translateX(0) translateY(0) rotate(0deg);
  }
  25% {
    transform: translateX(-4%) translateY(4%) rotate(-0.5deg);
  }
  50% {
    transform: translateX(4%) translateY(-3%) rotate(1deg);
  }
  75% {
    transform: translateX(2%) translateY(2%) rotate(-0.5deg);
  }
}

/* ============================================================ */
/* 抽牌区域基础样式                                              */
/* ============================================================ */
.draw-section {
  text-align: center;
  position: relative;
  z-index: 1;
  /* 页面加载淡入动画 */
  animation: page-fade-in 0.8s ease-out;
}

@keyframes page-fade-in {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  margin-bottom: 16rpx;
  /* 标题淡入动画 */
  animation: title-fade-in 1s ease-out 0.2s both;
}

@keyframes title-fade-in {
  0% {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tarot-title {
  font-size: 48rpx;
  font-weight: 700;
  /* 金色渐变标题 + 多层光晕 */
  background: linear-gradient(135deg, #f0d78c 0%, #d4af37 50%, #b8942d 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  text-shadow: 0 2rpx 8rpx rgba(212, 175, 55, 0.3);
  filter: drop-shadow(0 0 10rpx rgba(212, 175, 55, 0.2))
    drop-shadow(0 0 20rpx rgba(212, 175, 55, 0.1));
  animation: title-glow 5s ease-in-out infinite;
}

/* 标题持续微光动画 */
@keyframes title-glow {
  0%,
  100% {
    filter: drop-shadow(0 0 10rpx rgba(212, 175, 55, 0.2))
      drop-shadow(0 0 20rpx rgba(212, 175, 55, 0.1));
  }
  50% {
    filter: drop-shadow(0 0 15rpx rgba(212, 175, 55, 0.35))
      drop-shadow(0 0 30rpx rgba(212, 175, 55, 0.15));
  }
}

.history-link {
  font-size: 26rpx;
  color: var(--primary-gold-light);
  text-decoration: none;
  padding: 10rpx 20rpx;
  background: rgba(212, 175, 55, 0.15);
  border: 1rpx solid rgba(212, 175, 55, 0.3);
  border-radius: 999rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.history-link:active {
  background: rgba(212, 175, 55, 0.25);
  transform: scale(0.96);
}

.pill {
  padding: 10rpx 20rpx;
  background: rgba(212, 175, 55, 0.12);
  color: var(--primary-gold-light);
  border-radius: 999rpx;
  font-size: 24rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.2);
  backdrop-filter: blur(8rpx);
}

.tarot-subtitle {
  font-size: 26rpx;
  color: rgba(240, 215, 140, 0.7);
  margin-bottom: 12rpx;
  padding: 0 30rpx;
  animation: title-fade-in 1s ease-out 0.4s both;
}

/* 合规提示样式 */
.compliance-tip {
  font-size: 22rpx;
  color: rgba(240, 215, 140, 0.5);
  margin-bottom: 24rpx;
  padding: 0 30rpx;
  text-align: center;
}

.draw-count {
  font-size: 26rpx;
  color: var(--primary-gold-light);
  margin-bottom: 24rpx;
}

/* ============================================================ */
/* 流程步骤指示器 - 神秘风格升级                                   */
/* ============================================================ */
.flow-steps {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  margin-bottom: 24rpx;
  animation: title-fade-in 1s ease-out 0.6s both;
}

.step-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.08);
  color: rgba(240, 215, 140, 0.5);
  font-size: 26rpx;
  margin: 0 8rpx;
  transition: all 0.3s ease;
  border: 1rpx solid rgba(212, 175, 55, 0.1);
  backdrop-filter: blur(8rpx);
}

.step-item.active {
  background: linear-gradient(
    135deg,
    rgba(212, 175, 55, 0.3),
    rgba(184, 148, 45, 0.2)
  );
  color: var(--primary-gold-light);
  box-shadow: 0 6rpx 20rpx rgba(212, 175, 55, 0.25),
    inset 0 0 20rpx rgba(212, 175, 55, 0.1);
  font-weight: 600;
  border: 1rpx solid rgba(212, 175, 55, 0.4);
}

.step-item.done {
  background: rgba(212, 175, 55, 0.15);
  color: var(--primary-gold);
  border: 1rpx solid rgba(212, 175, 55, 0.2);
}

.step-item.current {
  background: linear-gradient(
    135deg,
    rgba(212, 175, 55, 0.2),
    rgba(123, 104, 166, 0.15)
  );
  color: var(--primary-gold-light);
  border: 1rpx solid rgba(212, 175, 55, 0.3);
  animation: pulse-step-glow 2s ease-in-out infinite;
}

@keyframes pulse-step-glow {
  0%,
  100% {
    opacity: 1;
    box-shadow: 0 0 15rpx rgba(212, 175, 55, 0.2);
  }
  50% {
    opacity: 0.85;
    box-shadow: 0 0 25rpx rgba(212, 175, 55, 0.4);
  }
}

/* ============================================================ */
/* 牌阵交互区域容器                                              */
/* ============================================================ */
.cards-area-wrapper {
  position: relative;
  width: 100%;
  min-height: 320rpx;
  margin: 24rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* idle阶段的静态预览区域 */
.phase-idle .cards-area-wrapper {
  min-height: 320rpx;
  margin-top: 32rpx;
}

/* ============================================================ */
/* 洗牌动画 (Shuffling Phase)                                    */
/* ============================================================ */
.shuffle-animation-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  transition: opacity 0.3s ease, filter 0.3s ease;
}

/* 静态预览状态 - 半透明待激活 */
.shuffle-animation-container.shuffle-static {
  opacity: 0.7;
  filter: grayscale(30%);
}

/* 动画播放状态 */
.shuffle-animation-container.shuffle-animating {
  opacity: 1;
  filter: none;
}

/* 洗牌结束后淡出过渡 */
.shuffle-animation-container.shuffle-fade-out {
  animation: shuffle-fade-out 0.4s ease-out forwards;
}

@keyframes shuffle-fade-out {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(0.85) translateY(-30rpx);
  }
}

.shuffle-deck {
  position: relative;
  width: 180rpx;
  height: 260rpx;
  perspective: 1000rpx;
}

/* 洗牌中的每张牌 - 神秘风格 */
.shuffle-card {
  position: absolute;
  width: 90rpx;
  height: 144rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.4),
    0 0 20rpx rgba(212, 175, 55, 0.15);
  overflow: hidden;
  left: 50%;
  top: 50%;
  transform-origin: center center;
  background: linear-gradient(135deg, #2d2440 0%, #3d2a5c 100%);
  border: 1rpx solid rgba(212, 175, 55, 0.3);
  transition: transform 0.3s ease;
}

.shuffle-card-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 静态摆放状态 - 8张牌整齐摆放 + 轻柔漂浮 */
.shuffle-card-static {
  animation: shuffle-idle-float 5s ease-in-out infinite !important;
}
.shuffle-card-static:nth-child(1) {
  transform: translate(-50%, -50%) rotate(-2deg);
  z-index: 8;
  animation-delay: 0s !important;
}
.shuffle-card-static:nth-child(2) {
  transform: translate(-50%, -50%) rotate(1deg) translateX(2rpx);
  z-index: 7;
  animation-delay: -0.6s !important;
}
.shuffle-card-static:nth-child(3) {
  transform: translate(-50%, -50%) rotate(-1deg) translateX(-2rpx);
  z-index: 6;
  animation-delay: -1.2s !important;
}
.shuffle-card-static:nth-child(4) {
  transform: translate(-50%, -50%) rotate(2deg) translateY(2rpx);
  z-index: 5;
  animation-delay: -1.8s !important;
}
.shuffle-card-static:nth-child(5) {
  transform: translate(-50%, -50%) rotate(-1.5deg) translateY(-2rpx);
  z-index: 4;
  animation-delay: -2.4s !important;
}
.shuffle-card-static:nth-child(6) {
  transform: translate(-50%, -50%) rotate(1.5deg);
  z-index: 3;
  animation-delay: -3s !important;
}
.shuffle-card-static:nth-child(7) {
  transform: translate(-50%, -50%) rotate(-0.5deg);
  z-index: 2;
  animation-delay: -3.6s !important;
}
.shuffle-card-static:nth-child(8) {
  transform: translate(-50%, -50%) rotate(0.5deg);
  z-index: 1;
  animation-delay: -4.2s !important;
}

/* 静态牌轻柔漂浮动画 */
@keyframes shuffle-idle-float {
  0%,
  100% {
    transform: translate(-50%, -50%) translateY(0);
    filter: brightness(1);
  }
  50% {
    transform: translate(-50%, -50%) translateY(-4rpx);
    filter: brightness(1.02);
  }
}

/* 洗牌动画 - 神秘、轻盈、有仪式感 (与3.5秒音效同步) */
.shuffle-card-0 {
  animation: shuffle-mystical-0 var(--shuffle-duration, 3.5s) ease-in-out
    infinite;
  z-index: 8;
}
.shuffle-card-1 {
  animation: shuffle-mystical-1 var(--shuffle-duration, 3.5s) ease-in-out
    infinite 0.15s;
  z-index: 7;
}
.shuffle-card-2 {
  animation: shuffle-mystical-2 var(--shuffle-duration, 3.5s) ease-in-out
    infinite 0.3s;
  z-index: 6;
}
.shuffle-card-3 {
  animation: shuffle-mystical-3 var(--shuffle-duration, 3.5s) ease-in-out
    infinite 0.45s;
  z-index: 5;
}
.shuffle-card-4 {
  animation: shuffle-mystical-4 var(--shuffle-duration, 3.5s) ease-in-out
    infinite 0.6s;
  z-index: 4;
}
.shuffle-card-5 {
  animation: shuffle-mystical-5 var(--shuffle-duration, 3.5s) ease-in-out
    infinite 0.75s;
  z-index: 3;
}
.shuffle-card-6 {
  animation: shuffle-mystical-6 var(--shuffle-duration, 3.5s) ease-in-out
    infinite 0.9s;
  z-index: 2;
}
.shuffle-card-7 {
  animation: shuffle-mystical-7 var(--shuffle-duration, 3.5s) ease-in-out
    infinite 1.05s;
  z-index: 1;
}

/* 神秘洗牌动画关键帧 - 旋转 + 缩放 + 浮动 */
@keyframes shuffle-mystical-0 {
  0%,
  100% {
    transform: translate(-50%, -50%) rotate(0deg) scale(1) translateY(0);
  }
  25% {
    transform: translate(-50%, -50%) rotate(-15deg) scale(1.05)
      translateY(-20rpx);
  }
  50% {
    transform: translate(-50%, -50%) rotate(8deg) scale(0.95) translateY(10rpx);
  }
  75% {
    transform: translate(-50%, -50%) rotate(-5deg) scale(1.02)
      translateY(-10rpx);
  }
}

@keyframes shuffle-mystical-1 {
  0%,
  100% {
    transform: translate(-50%, -50%) rotate(5deg) scale(1) translateY(0);
  }
  25% {
    transform: translate(-50%, -50%) rotate(20deg) scale(0.96) translateY(15rpx);
  }
  50% {
    transform: translate(-50%, -50%) rotate(-12deg) scale(1.04)
      translateY(-25rpx);
  }
  75% {
    transform: translate(-50%, -50%) rotate(3deg) scale(0.98) translateY(5rpx);
  }
}

@keyframes shuffle-mystical-2 {
  0%,
  100% {
    transform: translate(-50%, -50%) rotate(-8deg) scale(0.98) translateY(5rpx);
  }
  25% {
    transform: translate(-50%, -50%) rotate(12deg) scale(1.03)
      translateY(-15rpx);
  }
  50% {
    transform: translate(-50%, -50%) rotate(-18deg) scale(0.95)
      translateY(20rpx);
  }
  75% {
    transform: translate(-50%, -50%) rotate(6deg) scale(1.01) translateY(-8rpx);
  }
}

@keyframes shuffle-mystical-3 {
  0%,
  100% {
    transform: translate(-50%, -50%) rotate(10deg) scale(1.02)
      translateY(-10rpx);
  }
  25% {
    transform: translate(-50%, -50%) rotate(-8deg) scale(0.97) translateY(18rpx);
  }
  50% {
    transform: translate(-50%, -50%) rotate(15deg) scale(1.06)
      translateY(-22rpx);
  }
  75% {
    transform: translate(-50%, -50%) rotate(-3deg) scale(0.99) translateY(8rpx);
  }
}

@keyframes shuffle-mystical-4 {
  0%,
  100% {
    transform: translate(-50%, -50%) rotate(-5deg) scale(0.97) translateY(12rpx);
  }
  25% {
    transform: translate(-50%, -50%) rotate(18deg) scale(1.04)
      translateY(-18rpx);
  }
  50% {
    transform: translate(-50%, -50%) rotate(-10deg) scale(0.94)
      translateY(25rpx);
  }
  75% {
    transform: translate(-50%, -50%) rotate(8deg) scale(1.02) translateY(-5rpx);
  }
}

@keyframes shuffle-mystical-5 {
  0%,
  100% {
    transform: translate(-50%, -50%) rotate(12deg) scale(1) translateY(-8rpx);
  }
  25% {
    transform: translate(-50%, -50%) rotate(-15deg) scale(0.96)
      translateY(22rpx);
  }
  50% {
    transform: translate(-50%, -50%) rotate(6deg) scale(1.05) translateY(-20rpx);
  }
  75% {
    transform: translate(-50%, -50%) rotate(-8deg) scale(0.98) translateY(10rpx);
  }
}

@keyframes shuffle-mystical-6 {
  0%,
  100% {
    transform: translate(-50%, -50%) rotate(-12deg) scale(0.96)
      translateY(15rpx);
  }
  25% {
    transform: translate(-50%, -50%) rotate(10deg) scale(1.02)
      translateY(-12rpx);
  }
  50% {
    transform: translate(-50%, -50%) rotate(-6deg) scale(0.98) translateY(18rpx);
  }
  75% {
    transform: translate(-50%, -50%) rotate(15deg) scale(1.04)
      translateY(-15rpx);
  }
}

@keyframes shuffle-mystical-7 {
  0%,
  100% {
    transform: translate(-50%, -50%) rotate(8deg) scale(1.01) translateY(-5rpx);
  }
  25% {
    transform: translate(-50%, -50%) rotate(-12deg) scale(0.95)
      translateY(20rpx);
  }
  50% {
    transform: translate(-50%, -50%) rotate(5deg) scale(1.03) translateY(-18rpx);
  }
  75% {
    transform: translate(-50%, -50%) rotate(-10deg) scale(0.97)
      translateY(12rpx);
  }
}

.shuffle-text {
  margin-top: 32rpx;
  font-size: 26rpx;
  /* 金色渐变文字 */
  background: linear-gradient(135deg, #f0d78c 0%, #d4af37 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-weight: 600;
  letter-spacing: 4rpx;
  transition: opacity 0.3s ease;
  padding: 12rpx 24rpx;
  background-color: rgba(26, 20, 40, 0.6);
  border: 1rpx solid rgba(212, 175, 55, 0.2);
  border-radius: 999rpx;
  backdrop-filter: blur(8rpx);
}

/* 静态状态下的提示文字 */
.shuffle-static .shuffle-text {
  opacity: 0.7;
  animation: none;
}

/* 动画状态下的发光文字 */
.shuffle-animating .shuffle-text {
  animation: text-glow 2s ease-in-out infinite;
}

@keyframes text-glow {
  0%,
  100% {
    opacity: 1;
    text-shadow: 0 0 10rpx rgba(212, 175, 55, 0.3);
  }
  50% {
    opacity: 0.8;
    text-shadow: 0 0 20rpx rgba(212, 175, 55, 0.6);
  }
}

/* ============================================================ */
/* 72张牌扇形展开 (Spreading/Selecting Phase)                    */
/* 升级版 - 神秘立体扇形布局 + 呼吸动画                            */
/* ============================================================ */
.fan-container {
  position: relative;
  width: 100%;
  height: 520rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 40rpx;
  animation: fan-container-fade-in 0.6s ease-out forwards;
}

/* 扇形区域淡入动画 - 从洗牌区域平滑过渡 */
@keyframes fan-container-fade-in {
  0% {
    opacity: 0;
    transform: scale(0.85) translateY(30rpx);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.fan-deck {
  position: relative;
  width: 100%;
  height: 420rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  /* 扇形底部柔光 - 增强层级 */
  filter: drop-shadow(0 20rpx 40rpx rgba(212, 175, 55, 0.18))
    drop-shadow(0 40rpx 60rpx rgba(123, 104, 166, 0.1));
}

/* 每张扇形牌 - 神秘风格升级 + 光晕增强 */
.fan-card-item {
  position: absolute;
  width: var(--card-width, 70rpx);
  height: var(--card-height, 112rpx);
  border-radius: 10rpx;
  /* 增强阴影分离度 - 更立体多层光晕 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.35), 0 8rpx 16rpx rgba(0, 0, 0, 0.25),
    0 2rpx 6rpx rgba(212, 175, 55, 0.15), 0 0 12rpx rgba(212, 175, 55, 0.08);
  overflow: hidden;
  cursor: pointer;
  transform-origin: center calc(100% + 400rpx);
  transform: rotate(0deg);
  opacity: 0;
  transition: box-shadow 0.3s ease, filter 0.3s ease, transform 0.3s ease;
  z-index: var(--z-index, 1);
  bottom: 0;
  left: 50%;
  margin-left: calc(var(--card-width, 70rpx) / -2);
  /* 金色边框 */
  border: 1rpx solid rgba(212, 175, 55, 0.3);
}

/* 铺开后的状态 + 呼吸动画 */
.fan-card-item.spread {
  opacity: 1;
  animation: spread-out var(--spread-duration, 0.8s) ease-out forwards,
    card-breathe 4s ease-in-out infinite 1s;
  animation-delay: var(--delay, 0ms);
}

/* 轻微漂浮呼吸动画 - 增强版 4-6rpx 幅度 */
@keyframes card-breathe {
  0%,
  100% {
    transform: rotate(var(--angle, 0deg)) translateY(0);
    filter: brightness(1);
  }
  50% {
    transform: rotate(var(--angle, 0deg)) translateY(-5rpx);
    filter: brightness(1.03);
  }
}

/* 扇形展开动画 */
@keyframes spread-out {
  0% {
    transform: rotate(0deg) scale(0.85);
    opacity: 0;
  }
  60% {
    opacity: 1;
  }
  100% {
    transform: rotate(var(--angle, 0deg)) scale(1);
    opacity: 1;
  }
}

/* 触摸效果 - 增强金色边光 + 放大 + 脉冲动画 */
.fan-card-item.spread:active {
  filter: brightness(1.25);
  box-shadow: 0 16rpx 40rpx rgba(212, 175, 55, 0.6),
    0 0 30rpx rgba(212, 175, 55, 0.5), 0 0 50rpx rgba(240, 215, 140, 0.3),
    inset 0 0 15rpx rgba(212, 175, 55, 0.3);
  transform: rotate(var(--angle, 0deg)) scale(1.2) translateY(-8rpx);
  border-color: rgba(212, 175, 55, 1);
  transition: all 0.1s ease-out;
}

.fan-card-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 选中后飞出的牌 */
.fan-card-item.card-flying {
  animation: fly-to-center var(--fly-duration, 0.5s) ease-out forwards !important;
  z-index: 100 !important;
}

@keyframes fly-to-center {
  0% {
    transform: rotate(var(--angle, 0deg)) scale(1);
    opacity: 1;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  }
  100% {
    transform: rotate(0deg) scale(var(--fly-scale, 1.4));
    opacity: 0;
    box-shadow: 0 20rpx 50rpx rgba(212, 175, 55, 0.6);
  }
}

/* 其他牌淡出 */
.fan-card-item.card-dimmed {
  animation: fade-out-cards var(--fade-duration, 0.4s) ease-out forwards;
  animation-delay: var(--fade-delay, 100ms);
}

@keyframes fade-out-cards {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0.1;
    filter: blur(3rpx) brightness(0.7);
  }
}

/* ============================================================ */
/* 选牌提示 - 神秘风格升级 + 入场动画                               */
/* ============================================================ */
.select-hint {
  margin-top: 120rpx;
  padding: 24rpx 24rpx;
  position: absolute;
  top: 30%; /* 原来可能是 50%，再往下调一点 */
  transform: translateX(-50%);
  /* 柔光背景框 */
  background: linear-gradient(
    135deg,
    rgba(212, 175, 55, 0.15) 0%,
    rgba(123, 104, 166, 0.1) 100%
  );
  border-radius: 24rpx;
  animation: hint-entrance 0.8s ease-out forwards,
    hint-mystical-pulse 3s ease-in-out infinite 0.8s;
  box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.2),
    inset 0 0 30rpx rgba(212, 175, 55, 0.05);
  border: 1rpx solid rgba(212, 175, 55, 0.25);
  backdrop-filter: blur(10rpx);
  position: relative;
}

/* 提示文字入场动画 - 淡入 + 向上浮动 */
@keyframes hint-entrance {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Tarot装饰符号 */
.select-hint::before {
  content: "✦";
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: rgba(212, 175, 55, 0.7);
  animation: twinkle 2s ease-in-out infinite;
}

.select-hint::after {
  content: "✦";
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
  color: rgba(212, 175, 55, 0.7);
  animation: twinkle 2s ease-in-out infinite 0.5s;
}

@keyframes twinkle {
  0%,
  100% {
    opacity: 0.5;
    transform: translateY(-50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translateY(-50%) scale(1.2);
  }
}

.select-hint text {
  font-size: 30rpx;
  /* 金色渐变字体 */
  background: linear-gradient(135deg, #f0d78c 0%, #d4af37 50%, #f0d78c 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  font-weight: 600;
  letter-spacing: 3rpx;
  text-shadow: 0 2rpx 8rpx rgba(212, 175, 55, 0.3);
}

@keyframes hint-mystical-pulse {
  0%,
  100% {
    transform: scale(1);
    box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.2),
      inset 0 0 30rpx rgba(212, 175, 55, 0.05);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 12rpx 32rpx rgba(212, 175, 55, 0.3),
      inset 0 0 40rpx rgba(212, 175, 55, 0.08);
  }
}

/* ============================================================ */
/* 选牌进度指示器 - 进度条风格升级                                  */
/* ============================================================ */
.card-progress {
  width: 100%;
  padding: 24rpx 30rpx;
  margin-bottom: 24rpx;
  background: linear-gradient(
    180deg,
    rgba(26, 20, 40, 0.9) 0%,
    rgba(26, 20, 40, 0) 100%
  );
  position: relative;
}

/* 进度条背景 */
.card-progress::before {
  content: "";
  position: absolute;
  top: 0;
  left: 30rpx;
  right: 30rpx;
  height: 4rpx;
  background: rgba(212, 175, 55, 0.15);
  border-radius: 2rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.progress-label {
  font-size: 36rpx;
  margin-left: 40rpx;
  font-weight: 700;
  /* 金色渐变 */
  background: linear-gradient(135deg, #f0d78c 0%, #d4af37 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.progress-count {
  font-size: 32rpx;
  margin-right: 80rpx;
  color: var(--primary-gold-light);
  font-weight: 600;
  /* 数字动态更新动画 + 持续微跳动 */
  animation: count-update 0.4s cubic-bezier(0.34, 1.56, 0.64, 1),
    count-subtle-pulse 2.5s ease-in-out infinite 0.4s;
  text-shadow: 0 0 10rpx rgba(212, 175, 55, 0.3);
}

/* 数字更新时的弹跳效果 */
@keyframes count-update {
  0% {
    transform: scale(1.3) translateY(-5rpx);
    opacity: 0.5;
    text-shadow: 0 0 20rpx rgba(212, 175, 55, 0.6);
  }
  60% {
    transform: scale(0.95) translateY(2rpx);
    opacity: 1;
  }
  100% {
    transform: scale(1) translateY(0);
    opacity: 1;
    text-shadow: 0 0 10rpx rgba(212, 175, 55, 0.3);
  }
}

/* 数字持续微跳动效果 */
@keyframes count-subtle-pulse {
  0%,
  100% {
    transform: scale(1);
    text-shadow: 0 0 10rpx rgba(212, 175, 55, 0.3);
  }
  50% {
    transform: scale(1.03);
    text-shadow: 0 0 15rpx rgba(212, 175, 55, 0.5);
  }
}

.progress-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: center;
  max-width: 600rpx; /* 限制最大宽度，强制换行 */
  margin: 0 auto;
}

.progress-slot {
  min-width: 100rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 16rpx;
  border: 2rpx dashed rgba(212, 175, 55, 0.3);
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: inset 0 0 10rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(8rpx);
}

.progress-slot.filled {
  background: linear-gradient(
    135deg,
    rgba(212, 175, 55, 0.25) 0%,
    rgba(184, 148, 45, 0.15) 100%
  );
  border: 2rpx solid rgba(212, 175, 55, 0.6);
  box-shadow: 0 8rpx 20rpx rgba(212, 175, 55, 0.3),
    inset 0 0 15rpx rgba(212, 175, 55, 0.1);
  transform: translateY(-4rpx) scale(1.02);
  /* 填充动画 */
  animation: slot-fill 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes slot-fill {
  0% {
    transform: translateY(0) scale(0.9);
    opacity: 0.5;
  }
  50% {
    transform: translateY(-8rpx) scale(1.05);
  }
  100% {
    transform: translateY(-4rpx) scale(1.02);
    opacity: 1;
  }
}

.slot-label {
  font-size: 24rpx;
  color: rgba(240, 215, 140, 0.6);
  text-align: center;
  display: block;
}

.progress-slot.filled .slot-label {
  color: var(--primary-gold-light);
  font-weight: 700;
  text-shadow: 0 1rpx 4rpx rgba(212, 175, 55, 0.3);
}

/* ============================================================ */
/* 已选中牌标记 - 增强放大动画与视觉反馈                           */
/* （配合 WXML 中的 card-chosen 类）                             */
/* ============================================================ */
.fan-card-item.card-chosen {
  /* 选中后放大并上移，创造"提起"的视觉效果 - 增强弹性 */
  animation: card-select-pop var(--card-select-duration, 0.4s)
    cubic-bezier(0.34, 1.56, 0.64, 1) forwards !important;
  z-index: 50 !important;
  filter: brightness(1.2) drop-shadow(0 12rpx 32rpx rgba(212, 175, 55, 0.7));
  /* 增强金色边框 */
  border: 2rpx solid rgba(212, 175, 55, 0.9) !important;
}

/* 选中弹出动画 - 增强弹性效果 */
@keyframes card-select-pop {
  0% {
    transform: rotate(var(--angle, 0deg)) translateX(var(--x, 0))
      translateY(var(--y, 0)) scale(1);
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.35);
  }
  40% {
    transform: rotate(calc(var(--angle, 0deg) * 0.2))
      translateX(calc(var(--x, 0) * 0.4)) translateY(calc(var(--y, 0) - 80rpx))
      scale(1.7);
    box-shadow: 0 20rpx 50rpx rgba(212, 175, 55, 0.6),
      0 0 30rpx rgba(212, 175, 55, 0.4);
  }
  100% {
    transform: rotate(calc(var(--angle, 0deg) * 0.4))
      translateX(calc(var(--x, 0) * 0.5)) translateY(calc(var(--y, 0) - 50rpx))
      scale(var(--card-select-scale, 1.6));
    box-shadow: 0 16rpx 40rpx rgba(212, 175, 55, 0.5),
      0 0 24rpx rgba(212, 175, 55, 0.35);
  }
}

/* 选中牌的发光边框效果 - 增强金色光晕 */
.fan-card-item.card-chosen::after {
  content: "";
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border-radius: 12rpx;
  background: linear-gradient(
    135deg,
    rgba(212, 175, 55, 0.9),
    rgba(240, 215, 140, 0.8),
    rgba(212, 175, 55, 0.9)
  );
  z-index: -1;
  animation: glow-pulse 1.2s ease-in-out infinite;
}

@keyframes glow-pulse {
  0%,
  100% {
    opacity: 0.7;
    transform: scale(1);
    box-shadow: 0 0 20rpx rgba(212, 175, 55, 0.6);
  }
  50% {
    opacity: 1;
    transform: scale(1.02);
    box-shadow: 0 0 40rpx rgba(212, 175, 55, 0.9),
      0 0 60rpx rgba(240, 215, 140, 0.4);
  }
}

.card-selected-badge {
  position: absolute;
  top: -14rpx;
  right: -14rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #caa577, #a17952);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(161, 121, 82, 0.5);
  z-index: 10;
  animation: badge-pop 0.3s ease-out;
}

@keyframes badge-pop {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  60% {
    transform: scale(1.2);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.card-selected-badge text {
  font-size: 24rpx;
  font-weight: 700;
  color: #fff;
}

/* ============================================================ */
/* 飞出放大的选中牌覆盖层（overlay）                              */
/* ============================================================ */
.flying-card-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(255, 253, 245, 0.95);
  z-index: 1000;
  animation: overlay-fade-in 0.3s ease-out;
}

@keyframes overlay-fade-in {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.flying-card {
  width: 180rpx;
  height: 288rpx;
  border-radius: 12rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.25);
  overflow: hidden;
  animation: card-float 2s ease-in-out infinite;
}

@keyframes card-float {
  0%,
  100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-15rpx) rotate(1deg);
  }
}

.flying-card-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.flying-card-hint {
  margin-top: 40rpx;
  font-size: 28rpx;
  color: #8b7355;
  font-weight: 500;
  animation: text-glow 2s ease-in-out infinite;
}

/* 未洗牌时牌阵半透明提示 */
.card-item.disabled {
  opacity: 0.6;
  pointer-events: none;
}

.cards-display {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 20rpx;
  margin: 20rpx 0 60rpx;
}

.card-item {
  width: 160rpx;
  height: 256rpx;
  transition: transform 0.3s;
  position: relative;
}

.card-item.selected {
  transform: translateY(-20rpx);
}

.card-back {
  width: 160rpx;
  height: 256rpx;
  border-radius: 12rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-pos {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.65);
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-hint {
  position: absolute;
  bottom: 12rpx;
  left: 12rpx;
  right: 12rpx;
  padding: 10rpx 12rpx;
  background: rgba(0, 0, 0, 0.55);
  color: #fbe9c8;
  font-size: 22rpx;
  line-height: 1.3;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.draw-btn {
  width: 420rpx;
  margin: 40rpx auto 20rpx;
  font-size: 32rpx;
  padding: 26rpx 32rpx;
  /* 脉冲发光动画 */
  animation: btn-pulse-glow 4s ease-in-out infinite;
}

/* 按钮舒缓脉冲发光效果 */
@keyframes btn-pulse-glow {
  0%,
  100% {
    box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.4),
      0 0 30rpx rgba(212, 175, 55, 0.2),
      inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
  }
  50% {
    box-shadow: 0 10rpx 30rpx rgba(212, 175, 55, 0.55),
      0 0 50rpx rgba(212, 175, 55, 0.35), 0 0 80rpx rgba(212, 175, 55, 0.15),
      inset 0 2rpx 4rpx rgba(255, 255, 255, 0.4);
  }
}

/* 禁用状态不显示发光动画 */
.draw-btn[disabled] {
  animation: none;
}

/* AI 生成内容提示 */
.ai-disclaimer {
  text-align: center;
  font-size: 20rpx;
  color: #9c9c9c;
  margin-top: 16rpx;
  line-height: 1.4;
}

/* ============================================================ */
/* 结果展示区域 (Result Phase)                                   */
/* ============================================================ */
.result-section {
  padding: 20rpx;
  animation: result-fade-in 0.6s ease-out;
}

@keyframes result-fade-in {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

.card-result {
  text-align: center;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center; /* 水平居中所有子元素 */
  justify-content: center;
}

/* 抽牌结果卡片揭示动画 */
.card-reveal-animation {
  animation: card-reveal 0.8s ease-out;
}

@keyframes card-reveal {
  0% {
    opacity: 0;
    transform: scale(0.8) rotateY(180deg);
  }
  50% {
    opacity: 1;
    transform: scale(1.05) rotateY(90deg);
  }
  100% {
    opacity: 1;
    transform: scale(1) rotateY(0deg);
  }
}

/* ============================================================ */
/* 多卡结果展示区域 - 神秘风格                                     */
/* ============================================================ */
.spread-result-header {
  text-align: center;
  margin-bottom: 24rpx;
}

.spread-result-title {
  font-size: 40rpx;
  font-weight: 600;
  /* 金色渐变标题 */
  background: linear-gradient(135deg, #f0d78c 0%, #d4af37 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  margin-bottom: 8rpx;
}

.spread-result-count {
  font-size: 26rpx;
  color: rgba(240, 215, 140, 0.7);
}

/* 多卡横向滚动容器 */
.cards-scroll {
