.phase-selected .fan-deck {
  pointer-events: none;
}

/* ============================================================ */
/* 现代化聊天输入栏 - 神秘风格                                     */
/* ============================================================ */

.chat-input-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
