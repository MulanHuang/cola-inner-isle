/* ============================================================ */
/* 按钮类型 - 神秘风格升级                                        */
/* ============================================================ */
.btn-primary {
  background: linear-gradient(135deg, #d4af37 0%, #b8942d 50%, #d4af37 100%);
  border-radius: 999rpx;
  color: #1a1428;
  font-size: 30rpx;
  font-weight: 600;
  padding: 24rpx 36rpx;
  box-shadow: 0 8rpx 24rpx rgba(212, 175, 55, 0.4),
    0 0 30rpx rgba(212, 175, 55, 0.2),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
  border: none;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  overflow: hidden;
}

/* 按钮按下效果 */
.btn-primary:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(212, 175, 55, 0.5),
    0 0 20rpx rgba(212, 175, 55, 0.3);
}

/* 按钮禁用状态 */
.btn-primary[disabled] {
  background: rgba(212, 175, 55, 0.3);
  color: rgba(26, 20, 40, 0.5);
  box-shadow: none;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 999rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.4);
  color: var(--primary-gold-light);
  font-size: 30rpx;
  padding: 22rpx 30rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(8rpx);
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background: rgba(212, 175, 55, 0.15);
  transform: scale(0.96);
}

.btn-secondary.solid {
  background: linear-gradient(
    135deg,
    rgba(212, 175, 55, 0.2),
    rgba(184, 148, 45, 0.15)
  );
  border: 1rpx solid rgba(212, 175, 55, 0.5);
  color: var(--primary-gold-light);
  box-shadow: 0 8rpx 20rpx rgba(212, 175, 55, 0.25),
    inset 0 0 15rpx rgba(212, 175, 55, 0.1);
}

/* 导航按钮样式 */
.nav-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 999rpx;
  border: 1rpx solid rgba(212, 175, 55, 0.4);
  color: var(--primary-gold-light);
  font-size: 30rpx;
  padding: 20rpx 26rpx;
