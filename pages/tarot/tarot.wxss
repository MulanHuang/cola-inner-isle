}

/* ============================================================ */
/* 星光粒子效果 - 细腻轻柔                                        */
/* ============================================================ */
.stars-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 0;
  overflow: hidden;
}

.star {
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  background: rgba(240, 215, 140, 0.8);
  border-radius: 50%;
  box-shadow: 0 0 6rpx rgba(212, 175, 55, 0.6);
  animation: star-float 15s ease-in-out infinite;
}

/* 星星位置和动画延迟 - 随机分布 */
.star-1 {
  top: 8%;
  left: 15%;
  width: 3rpx;
  height: 3rpx;
  animation-delay: 0s;
  animation-duration: 18s;
}

.star-2 {
  top: 12%;
  right: 20%;
  width: 5rpx;
  height: 5rpx;
  animation-delay: -3s;
  animation-duration: 20s;
}

.star-3 {
  top: 25%;
  left: 8%;
  width: 4rpx;
  height: 4rpx;
  animation-delay: -6s;
  animation-duration: 16s;
}

.star-4 {
  top: 35%;
  right: 12%;
  width: 3rpx;
  height: 3rpx;
  animation-delay: -9s;
  animation-duration: 22s;
}

.star-5 {
  top: 55%;
  left: 25%;
  width: 5rpx;
  height: 5rpx;
  animation-delay: -2s;
  animation-duration: 17s;
}

.star-6 {
  top: 68%;
  right: 30%;
  width: 4rpx;
  height: 4rpx;
  animation-delay: -5s;
  animation-duration: 19s;
}

.star-7 {
  top: 78%;
  left: 40%;
  width: 3rpx;
  height: 3rpx;
  animation-delay: -8s;
  animation-duration: 21s;
}

.star-8 {
  top: 85%;
  right: 15%;
  width: 4rpx;
  height: 4rpx;
  animation-delay: -11s;
  animation-duration: 16s;
}

/* 星星漂浮动画 */
@keyframes star-float {
  0%,
  100% {
    transform: translateY(0) translateX(0) scale(1);
    opacity: 0.4;
  }
  25% {
    transform: translateY(-15rpx) translateX(8rpx) scale(1.2);
    opacity: 0.8;
  }
  50% {
    transform: translateY(-8rpx) translateX(-5rpx) scale(0.9);
    opacity: 0.5;
  }
  75% {
    transform: translateY(-20rpx) translateX(10rpx) scale(1.1);
    opacity: 0.7;
  }
}

/* 星星闪烁效果 - 叠加在漂浮上 */
.star::after {
  content: "";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200%;
  height: 200%;
  background: radial-gradient(
    circle,
    rgba(212, 175, 55, 0.4) 0%,
    transparent 70%
  );
  animation: star-glow 3s ease-in-out infinite;
}

@keyframes star-glow {
  0%,
  100% {
    opacity: 0.3;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 0.8;
    transform: translate(-50%, -50%) scale(1.5);
  }
}
